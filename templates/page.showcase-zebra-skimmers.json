        "color_scheme": "industrial",
        "sticky_header": true,
        "header_style": "industrial"
      }
    },
    "hero": {
      "type": "preset-hero",
      "settings": {
        "preset_style": "zebra-skimmers",
        "height": "large",
        "overlay_opacity": 50,
        "title": "Industrial Oil Removal\nMade Simple",
        "subtitle": "Since 1968",
        "description": "Trusted by manufacturers worldwide. Our skimmers remove oil, coolant, and tramp oil from sumps and tanks.",
        "primary_button_text": "View Products",
        "primary_button_link": "",
        "secondary_button_text": "Request Quote",
        "show_scroll_indicator": false,
        "text_alignment": "left"
      }
    },
    "trust_badges": {
      "type": "preset-trust-badges",
      "settings": {
        "preset_style": "zebra-skimmers",
        "layout": "stats"
      },
      "blocks": {
        "stat_1": { "type": "stat", "settings": { "value": "55+", "label": "Years Experience" }},
        "stat_2": { "type": "stat", "settings": { "value": "50K+", "label": "Units Installed" }},
        "stat_3": { "type": "stat", "settings": { "value": "100+", "label": "Countries Served" }},
        "stat_4": { "type": "stat", "settings": { "value": "24/7", "label": "Technical Support" }}
      },
      "block_order": ["stat_1", "stat_2", "stat_3", "stat_4"]
    },
    "featured_collection": {
      "type": "preset-product-grid",
      "settings": {
        "preset_style": "zebra-skimmers",
        "title": "Our Products",
        "subtitle": "Industrial-Grade Solutions",
        "collection": "",
        "products_to_show": 6,
        "columns": 3,
        "show_quick_add": false,
        "card_style": "industrial"
      }
    },
    "featured_product": {
      "type": "preset-featured-product",
      "settings": {
        "preset_style": "zebra-skimmers",
        "badge_text": "Best Seller",
        "product": "",
        "title_override": "Model 50 Belt Skimmer",
        "description_override": "Our flagship industrial oil skimmer. Removes up to 40 gallons of oil per hour. Engineered for continuous 24/7 operation.",
