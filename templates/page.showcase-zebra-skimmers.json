{
  "layout": "theme.showcase",
  "name": "Showcase - Zebra Skimmers",
  "sections": {
    "header": {
      "type": "mega-menu-header",
      "settings": {
        "logo_text": "ZEBRA SKIMMERS",
        "show_utility_bar": true,
        "utility_left_text": "Industrial Oil Removal Solutions",
        "utility_phone": "1-800-555-SKIM",
