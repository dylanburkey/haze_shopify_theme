        "layout": "industrial"
      },
      "blocks": {
        "feature_1": { "type": "feature", "settings": { "icon": "settings", "text": "40 GPH Capacity" }},
        "feature_2": { "type": "feature", "settings": { "icon": "clock", "text": "24/7 Operation" }},
        "feature_3": { "type": "feature", "settings": { "icon": "award", "text": "5-Year Warranty" }}
      },
      "block_order": ["feature_1", "feature_2", "feature_3"]
    },
    "testimonials": {
      "type": "preset-testimonials",
      "settings": {
        "preset_style": "zebra-skimmers",
        "title": "Customer Success Stories",
        "layout": "grid"
      },
      "blocks": {
        "testimonial_1": {
          "type": "testimonial",
          "settings": {
            "quote": "Reduced our coolant costs by 60% in the first year. ROI in under 6 months.",
            "author": "Bob Johnson",
            "title": "Plant Manager, Midwest Manufacturing",
            "rating": 5
          }
        },
        "testimonial_2": {
          "type": "testimonial",
          "settings": {
            "quote": "Reliable, effective, and backed by excellent technical support. Highly recommend.",
