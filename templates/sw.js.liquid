// Performance monitoring
self.addEventListener('message', (event) => {
  if (event.data && event.data.type === 'PERFORMANCE_MEASURE') {
    console.log('[SW] Performance measure:', event.data.data);
  }
});

// Handle cache storage quota exceeded
self.addEventListener('error', (event) => {
  if (event.error && event.error.name === 'QuotaExceededError') {
    console.warn('[SW] Storage quota exceeded, cleaning up caches');
    
    // Clean up old caches more aggressively
    caches.keys().then(cacheNames => {
      const oldCaches = cacheNames.filter(name => name !== CACHE_NAME);
      return Promise.all(oldCaches.map(name => caches.delete(name)));
    });
  }
});
