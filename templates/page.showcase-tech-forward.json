      },
      "blocks": {
        "stat_1": { "type": "stat", "settings": { "value": "2M+", "label": "Devices Sold" }},
        "stat_2": { "type": "stat", "settings": { "value": "99.9%", "label": "Uptime" }},
        "stat_3": { "type": "stat", "settings": { "value": "0.1ms", "label": "Response Time" }},
