{%- comment -%}
  Critical CSS
  Inlined styles for above-the-fold content to eliminate render-blocking CSS.
  This CSS loads immediately while full stylesheets load asynchronously.

  Usage: Include in <head> before any external stylesheets
  {% render 'critical-css' %}
{%- endcomment -%}

<style id="critical-css">
  /* ==========================================================================
     CRITICAL CSS - Above the fold styles
     ========================================================================== */

  /* --------------------------------------------------------------------------
     CSS Reset & Base (Critical)
     -------------------------------------------------------------------------- */

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    -webkit-text-size-adjust: 100%;
    -moz-tab-size: 4;
    tab-size: 4;
  }

  body {
    margin: 0;
    font-family: var(--font-body-family, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: var(--font-body-size, 1rem);
    line-height: 1.5;
    color: var(--color-text, #121212);
    background-color: var(--color-background, #ffffff);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* --------------------------------------------------------------------------
     CSS Variables (Critical - from theme settings)
     -------------------------------------------------------------------------- */

  :root {
    /* Colors */
    --color-primary: {{ settings.color_primary | default: '#121212' }};
    --color-secondary: {{ settings.color_secondary | default: '#334FB4' }};
    --color-background: {{ settings.color_background | default: '#ffffff' }};
    --color-text: {{ settings.color_text | default: '#121212' }};
    --color-text-secondary: {{ settings.color_text_secondary | default: '#6B7280' }};
    --color-border: {{ settings.color_border | default: '#E5E5E5' }};
    --color-surface: {{ settings.color_background_secondary | default: '#F5F5F5' }};

    /* Typography */
    --font-body-family: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
    --font-heading-family: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
    --font-body-weight: {{ settings.font_body.weight }};
    --font-heading-weight: {{ settings.font_heading.weight }};

    /* Layout */
    --page-width: {{ settings.page_width | default: 1200 }}px;
    --page-gutter: 20px;
    --grid-gap: {{ settings.grid_gap | default: 24 }}px;

    /* Spacing */
    --space-1: 4px;
    --space-2: 8px;
    --space-3: 12px;
    --space-4: 16px;
    --space-6: 24px;
    --space-8: 32px;

    /* Borders */
    --radius: {{ settings.card_border_radius | default: 8 }}px;
    --radius-button: {{ settings.button_border_radius | default: 4 }}px;
  }

  /* --------------------------------------------------------------------------
     Layout (Critical)
     -------------------------------------------------------------------------- */

  .page-width {
    max-width: var(--page-width);
    margin: 0 auto;
    padding-left: var(--page-gutter);
    padding-right: var(--page-gutter);
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* --------------------------------------------------------------------------
     Typography (Critical)
     -------------------------------------------------------------------------- */

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    line-height: 1.2;
    margin: 0 0 0.5em;
    color: var(--color-text);
  }

  h1 { font-size: clamp(1.75rem, 4vw, 2.5rem); }
  h2 { font-size: clamp(1.5rem, 3vw, 2rem); }
  h3 { font-size: clamp(1.25rem, 2.5vw, 1.5rem); }

  p {
    margin: 0 0 1em;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
  }

  img, video {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* --------------------------------------------------------------------------
     Header (Critical - Always visible)
     -------------------------------------------------------------------------- */

  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-background);
    border-bottom: 1px solid var(--color-border);
  }

  .header__wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 64px;
    gap: var(--space-4);
  }

  .header__logo img,
  .header__logo svg {
    max-height: 40px;
    width: auto;
  }

  .header__nav {
    display: none;
  }

  @media (min-width: 990px) {
    .header__nav {
      display: flex;
      align-items: center;
      gap: var(--space-6);
    }
  }

  .header__icons {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  /* --------------------------------------------------------------------------
     Buttons (Critical)
     -------------------------------------------------------------------------- */

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: 12px 24px;
    font-family: inherit;
    font-size: 1rem;
    font-weight: 600;
    line-height: 1;
    text-decoration: none;
    border: 2px solid transparent;
    border-radius: var(--radius-button);
    cursor: pointer;
    transition: background-color 0.15s ease, border-color 0.15s ease, color 0.15s ease;
  }

  .btn--primary {
    background: var(--color-primary);
    color: #fff;
    border-color: var(--color-primary);
  }

  .btn--primary:hover {
    opacity: 0.9;
  }

  .btn--secondary {
    background: var(--color-surface);
    color: var(--color-text);
    border-color: var(--color-border);
  }

  .btn--outline {
    background: transparent;
    color: var(--color-text);
    border-color: var(--color-text);
  }

  .btn--icon {
    padding: 8px;
    background: transparent;
    border: none;
  }

  /* --------------------------------------------------------------------------
     Hero Section (Critical - First content)
     -------------------------------------------------------------------------- */

  .hero {
    position: relative;
    display: flex;
    align-items: center;
    min-height: 50vh;
    padding: var(--space-8) 0;
    background-size: cover;
    background-position: center;
  }

  .hero__content {
    position: relative;
    z-index: 1;
    max-width: 600px;
  }

  .hero__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: var(--space-4);
  }

  /* --------------------------------------------------------------------------
     Announcement Bar (Critical - Top of page)
     -------------------------------------------------------------------------- */

  .announcement-bar {
    background: var(--color-primary);
    color: #fff;
    text-align: center;
    padding: var(--space-2) var(--page-gutter);
    font-size: 0.875rem;
  }

  .announcement-bar a {
    color: inherit;
    text-decoration: underline;
  }

  /* --------------------------------------------------------------------------
     Skip Link (Accessibility - Critical)
     -------------------------------------------------------------------------- */

  .skip-link {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: #fff;
    padding: var(--space-3) var(--space-4);
    z-index: 9999;
    border-radius: var(--radius);
  }

  .skip-link:focus {
    top: var(--space-2);
  }

  /* --------------------------------------------------------------------------
     Loading States (Critical)
     -------------------------------------------------------------------------- */

  .loading {
    opacity: 0.5;
    pointer-events: none;
  }

  /* Skeleton loading placeholder */
  .skeleton {
    background: linear-gradient(90deg, var(--color-surface) 25%, var(--color-border) 50%, var(--color-surface) 75%);
    background-size: 200% 100%;
    animation: skeleton-loading 1.5s infinite;
    border-radius: var(--radius);
  }

  @keyframes skeleton-loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  /* --------------------------------------------------------------------------
     Prevent FOUC (Flash of Unstyled Content)
     -------------------------------------------------------------------------- */

  .no-js .js-only {
    display: none;
  }

  .js .no-js-only {
    display: none;
  }
</style>
