{%- comment -%}
  Icon Snippet
  Renders SVG icons by name

  Usage: {% render 'icon', name: 'menu', size: 24 %}

  Available icons:
  - menu, close, search, cart, user
  - chevron-down, chevron-left, chevron-right, chevron-up
  - plus, minus, check, x
  - heart, star, share
  - arrow-left, arrow-right
  - filter, grid, list
{%- endcomment -%}

{%- liquid
  assign icon_size = size | default: 24
-%}

{%- case name -%}
  {%- when 'menu' -%}
    <svg width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <line x1="3" y1="12" x2="21" y2="12"></line>
      <line x1="3" y1="6" x2="21" y2="6"></line>
      <line x1="3" y1="18" x2="21" y2="18"></line>
    </svg>

  {%- when 'close' -%}
    <svg width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>

  {%- when 'search' -%}
    <svg width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <circle cx="11" cy="11" r="8"></circle>
