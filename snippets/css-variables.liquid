    --color-surface: {{ preset_background_secondary }};
    --color-text: {{ preset_text }};
    --color-text-secondary: {{ preset_text_secondary }};
    --color-border: {{ preset_border }};
    --color-header-bg: {{ preset_header_bg }};
    --color-header-text: {{ preset_header_text }};
    --color-button-bg: {{ preset_button_bg }};
    --color-button-text: {{ preset_button_text }};
    --color-success: {{ preset_success }};
    --color-warning: {{ preset_warning }};
    --color-error: {{ preset_error }};

    /* Typography */
    --font-heading: '{{ preset_font_heading }}', sans-serif;
    --font-body: '{{ preset_font_body }}', sans-serif;
    --font-size-base: 16px;
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-md: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;
    --font-size-4xl: 2.25rem;
    --font-size-5xl: 3rem;

    /* Layout */
    --container-width: {{ preset_page_width }}px;
    --page-width: {{ preset_page_width }}px;
    --spacing-sections: {{ preset_spacing_sections }}px;
    --grid-gap: {{ preset_grid_gap }}px;

    /* Radii */
    --radius: {{ preset_button_radius }}px;
    --radius-button: {{ preset_button_radius }}px;
    --radius-card: {{ preset_card_radius }}px;
    --radius-input: {{ preset_input_radius }}px;
    --radius-sm: 4px;
    --radius-md: 8px;
    --radius-lg: 16px;
    --radius-full: 9999px;

    /* Spacing */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-10: 2.5rem;
    --space-12: 3rem;
    --space-16: 4rem;

    /* Transitions */
    --duration-fast: 150ms;
    --duration-normal: 300ms;
    --duration-slow: 500ms;
    --ease-default: cubic-bezier(0.4, 0, 0.2, 1);

    /* Z-index */
    --z-dropdown: 100;
    --z-sticky: 200;
    --z-fixed: 300;
    --z-modal-backdrop: 400;
    --z-modal: 500;
    --z-popover: 600;
    --z-tooltip: 700;

    /* Logo */
    --logo-text: '{{ preset_logo_text }}';
    --logo-suffix: '{{ preset_logo_suffix }}';
  }

  /* Dark mode detection for presets with dark backgrounds */
  {%- if preset == 'midnight-shift' or preset == 'tactical' or preset == 'monolith' or preset == 'tech-forward' -%}
  :root {
    color-scheme: dark;
  }
  {%- endif -%}
</style>
