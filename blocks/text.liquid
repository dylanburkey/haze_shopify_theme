{% doc %}
  Text block - Displays formatted text content
  Can be used across multiple sections

  @param {string} text - The text content to display
  @param {string} text_style - Style variant (body, caption, subtitle)
  @param {string} text_alignment - Text alignment (left, center, right)
{% enddoc %}

{%- liquid
  assign text_alignment = block.settings.text_alignment | default: 'left'
  assign text_style = block.settings.text_style | default: 'body'
-%}

<div class="block-text block-text--{{ text_style }} block-text--align-{{ text_alignment }}" {{ block.shopify_attributes }}>
  {%- if block.settings.text != blank -%}
    <p class="block-text__content">{{ block.settings.text }}</p>
  {%- endif -%}
</div>

{% stylesheet %}
  .block-text {
    width: 100%;
  }

  .block-text--align-left {
    text-align: left;
  }

  .block-text--align-center {
    text-align: center;
  }

  .block-text--align-right {
    text-align: right;
  }

  .block-text--body {
    font-size: var(--font-size-base);
    color: var(--color-text);
  }

  .block-text--caption {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .block-text--subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text);
    font-weight: 500;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:blocks.text.name",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "t:blocks.text.settings.text.label",
      "default": "Add your text here"
    },
    {
      "type": "select",
      "id": "text_style",
      "label": "t:blocks.text.settings.text_style.label",
      "default": "body",
      "options": [
        {
          "value": "body",
          "label": "t:blocks.text.settings.text_style.options.body"
        },
        {
          "value": "caption",
          "label": "t:blocks.text.settings.text_style.options.caption"
        },
        {
          "value": "subtitle",
          "label": "t:blocks.text.settings.text_style.options.subtitle"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "t:blocks.text.settings.text_alignment.label",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "t:blocks.text.settings.text_alignment.options.left"
        },
        {
          "value": "center",
          "label": "t:blocks.text.settings.text_alignment.options.center"
        },
        {
          "value": "right",
          "label": "t:blocks.text.settings.text_alignment.options.right"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:blocks.text.presets.default.name"
    }
  ]
}
{% endschema %}
