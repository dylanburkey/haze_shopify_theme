        }
      ]
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "t:blocks.heading.settings.heading_tag.label",
      "info": "t:blocks.heading.settings.heading_tag.info",
      "default": "h2",
      "options": [
        {
