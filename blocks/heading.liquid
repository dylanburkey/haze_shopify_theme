{% doc %}
  Heading block - Displays a heading with configurable level and style
  Can be used across multiple sections

  Schema settings:
  - heading: The heading text
  - heading_size: Visual size (h1, h2, h3, h4, h5, h6)
  - heading_tag: HTML tag to use (h1-h6)
  - heading_alignment: Text alignment
{% enddoc %}

{%- liquid
  assign heading_size = block.settings.heading_size | default: 'h2'
  assign heading_tag = block.settings.heading_tag | default: 'h2'
  assign heading_alignment = block.settings.heading_alignment | default: 'left'
-%}

<div class="block-heading block-heading--align-{{ heading_alignment }}" {{ block.shopify_attributes }}>
  {%- if block.settings.heading != blank -%}
    <{{ heading_tag }} class="block-heading__title block-heading--size-{{ heading_size }}">
      {{ block.settings.heading }}
    </{{ heading_tag }}>
  {%- endif -%}
</div>

{% stylesheet %}
  .block-heading {
    width: 100%;
  }

  .block-heading__title {
    margin: 0;
  }

  .block-heading--align-left {
    text-align: left;
  }

  .block-heading--align-center {
    text-align: center;
  }

  .block-heading--align-right {
    text-align: right;
  }

  .block-heading--size-h1 {
    font-size: var(--font-size-4xl);
  }

  .block-heading--size-h2 {
    font-size: var(--font-size-3xl);
  }

  .block-heading--size-h3 {
    font-size: var(--font-size-2xl);
  }

  .block-heading--size-h4 {
    font-size: var(--font-size-xl);
  }

  .block-heading--size-h5 {
    font-size: var(--font-size-lg);
  }

  .block-heading--size-h6 {
    font-size: var(--font-size-base);
  }
{% endstylesheet %}

