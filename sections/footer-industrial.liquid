  "tag": "section",
  "class": "section-footer-industrial",
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "style",
      "label": "Design style",
      "default": "machinist",
      "options": [
        { "value": "welder", "label": "The Welder" },
        { "value": "machinist", "label": "The Machinist" }
      ]
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#0a0a0a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#e5e5e5"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "min": 80,
      "max": 200,
      "step": 10,
      "default": 120,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "FORGE"
    },
    {
      "type": "text",
      "id": "logo_suffix",
      "label": "Logo suffix (accent color)",
      "default": "IND."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Industrial-grade products built to perform. Precision engineering for demanding environments."
    },
    {
      "type": "header",
      "content": "Options"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social links",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "QUICK_LINKS"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "NEWSLETTER"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description",
          "default": "Subscribe for product updates and industry news."
        }
      ]
    },
    {
      "type": "contact",
      "name": "Contact info",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "CONTACT"
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Address"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email"
        },
        {
          "type": "text",
          "id": "hours",
