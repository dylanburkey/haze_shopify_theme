{% comment %}
  Testimonials Section
  Displays customer testimonials with ratings and company info
  
  Features:
  - Star ratings
  - Customer photos/initials
  - Company attribution
  - Gradient background
{% endcomment %}

{{ 'preset-testimonials.css' | asset_url | stylesheet_tag }}

<section 
  id="testimonials-{{ section.id }}"
  class="testimonials"
  aria-labelledby="testimonials-title-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="testimonials"
>
  <div class="testimonials__container container">
    {%- if section.settings.subtitle != blank or section.settings.title != blank -%}
      <header class="testimonials__header">
        {%- if section.settings.subtitle != blank -%}
          <span class="testimonials__subtitle">{{ section.settings.subtitle }}</span>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 id="testimonials-title-{{ section.id }}" class="testimonials__title">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="testimonials__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="testimonials__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'testimonial' -%}
          <blockquote class="testimonial-card" {{ block.shopify_attributes }}>
            {%- comment -%} Rating {%- endcomment -%}
            {%- if block.settings.rating > 0 -%}
              <div class="testimonial-card__rating" aria-label="Rated {{ block.settings.rating }} out of 5 stars">
                {%- for i in (1..5) -%}
                  {%- if i <= block.settings.rating -%}
                    <svg class="testimonial-card__star testimonial-card__star--filled" width="20" height="20" viewBox="0 0 24 24" aria-hidden="true">
                      <polygon fill="currentColor" points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                    </svg>
                  {%- else -%}
                    <svg class="testimonial-card__star" width="20" height="20" viewBox="0 0 24 24" aria-hidden="true">
                      <polygon fill="none" stroke="currentColor" stroke-width="2" points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                    </svg>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            {%- endif -%}

            {%- comment -%} Quote {%- endcomment -%}
            <p class="testimonial-card__quote">{{ block.settings.quote }}</p>

            {%- comment -%} Author {%- endcomment -%}
            <footer class="testimonial-card__author">
              <div class="testimonial-card__avatar">
                {%- if block.settings.avatar != blank -%}
                  {{ block.settings.avatar | image_url: width: 96 | image_tag:
                    loading: 'lazy',
                    alt: block.settings.name
                  }}
                {%- else -%}
                  <span class="testimonial-card__initials">
                    {{ block.settings.name | slice: 0 }}
                  </span>
                {%- endif -%}
              </div>
              <div class="testimonial-card__info">
                <cite class="testimonial-card__name">{{ block.settings.name }}</cite>
                {%- if block.settings.title != blank or block.settings.company != blank -%}
                  <span class="testimonial-card__role">
                    {%- if block.settings.title != blank -%}
                      {{ block.settings.title }}
                    {%- endif -%}
                    {%- if block.settings.title != blank and block.settings.company != blank -%}
                      <span class="testimonial-card__separator">at</span>
                    {%- endif -%}
                    {%- if block.settings.company != blank -%}
                      {{ block.settings.company }}
                    {%- endif -%}
                  </span>
                {%- endif -%}
              </div>
            </footer>
          </blockquote>
        {%- endif -%}
      {%- endfor -%}
    </div>

    {%- comment -%} Stats Bar {%- endcomment -%}
    {%- if section.settings.show_stats -%}
      <div class="testimonials__stats">
        <div class="testimonials__stat">
          <span class="testimonials__stat-value">{{ section.settings.stat_1_value }}</span>
          <span class="testimonials__stat-label">{{ section.settings.stat_1_label }}</span>
        </div>
        <div class="testimonials__stat">
          <span class="testimonials__stat-value">{{ section.settings.stat_2_value }}</span>
          <span class="testimonials__stat-label">{{ section.settings.stat_2_label }}</span>
        </div>
        <div class="testimonials__stat">
          <span class="testimonials__stat-value">{{ section.settings.stat_3_value }}</span>
          <span class="testimonials__stat-label">{{ section.settings.stat_3_label }}</span>
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

