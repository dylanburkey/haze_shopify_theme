{% comment %}
  Modern Minimal Landing Page Section
  Clean, sophisticated aesthetic with minimal design
  Perfect for lifestyle brands, fashion, and premium products
{% endcomment %}

{{ 'landing-modern-minimal.css' | asset_url | stylesheet_tag }}

<div class="landing-modern-minimal" data-section-id="{{ section.id }}">
  {%- comment -%} Hero Section {%- endcomment -%}
  <section class="minimal-hero">
    <div class="container">
      <div class="minimal-hero__inner">
        <div class="minimal-hero__content">
          {%- if section.settings.hero_eyebrow != blank -%}
            <span class="minimal-hero__eyebrow">{{ section.settings.hero_eyebrow }}</span>
          {%- endif -%}
          <h1 class="minimal-hero__title">{{ section.settings.hero_title }}</h1>
          {%- if section.settings.hero_subtitle != blank -%}
            <p class="minimal-hero__subtitle">{{ section.settings.hero_subtitle }}</p>
          {%- endif -%}
          {%- if section.settings.hero_button_label != blank -%}
            <a href="{{ section.settings.hero_button_link }}" class="btn btn--primary">
              {{ section.settings.hero_button_label }}
            </a>
          {%- endif -%}
        </div>
        {%- if section.settings.hero_image != blank -%}
          <div class="minimal-hero__media">
            {{ section.settings.hero_image | image_url: width: 900 | image_tag: class: 'minimal-hero__image', loading: 'eager' }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </section>

  {%- comment -%} Featured Products {%- endcomment -%}
  {%- if section.settings.show_products and section.settings.collection != blank -%}
    <section class="minimal-products">
      <div class="container">
        {%- if section.settings.products_title != blank -%}
          <div class="section-header section-header--left">
            <h2 class="section-title">{{ section.settings.products_title }}</h2>
          </div>
        {%- endif -%}
        <div class="minimal-products__grid">
          {%- for product in section.settings.collection.products limit: section.settings.products_limit -%}
            <article class="minimal-product-card">
              <a href="{{ product.url }}" class="minimal-product-card__link">
                <div class="minimal-product-card__image">
                  {%- if product.featured_image != blank -%}
                    {{ product.featured_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
                <div class="minimal-product-card__content">
                  <h3 class="minimal-product-card__title">{{ product.title }}</h3>
                  <p class="minimal-product-card__price">{{ product.price | money }}</p>
                </div>
              </a>
            </article>
          {%- endfor -%}
        </div>
        {%- if section.settings.products_button_label != blank -%}
          <div class="minimal-products__action">
            <a href="{{ section.settings.collection.url }}" class="btn btn--outline">
              {{ section.settings.products_button_label }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} Featured Split {%- endcomment -%}
  {%- if section.settings.show_featured -%}
    <section class="minimal-featured">
      <div class="container">
        <div class="minimal-featured__inner">
          <div class="minimal-featured__media">
            {%- if section.settings.featured_image != blank -%}
              {{ section.settings.featured_image | image_url: width: 800 | image_tag: class: 'minimal-featured__image', loading: 'lazy' }}
            {%- endif -%}
          </div>
          <div class="minimal-featured__content">
            {%- if section.settings.featured_eyebrow != blank -%}
              <span class="section-eyebrow">{{ section.settings.featured_eyebrow }}</span>
            {%- endif -%}
            <h2 class="minimal-featured__title">{{ section.settings.featured_title }}</h2>
            {%- if section.settings.featured_text != blank -%}
              <p class="minimal-featured__text">{{ section.settings.featured_text }}</p>
            {%- endif -%}
            {%- if section.settings.featured_button_label != blank -%}
              <a href="{{ section.settings.featured_button_link }}" class="btn btn--primary">
                {{ section.settings.featured_button_label }}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} Values Strip {%- endcomment -%}
  {%- if section.settings.show_values -%}
    <section class="minimal-values">
      <div class="container">
        <div class="minimal-values__grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'value' -%}
              <div class="minimal-value" {{ block.shopify_attributes }}>
                <h3 class="minimal-value__title">{{ block.settings.title }}</h3>
                <p class="minimal-value__text">{{ block.settings.text }}</p>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} Testimonials {%- endcomment -%}
  {%- if section.settings.show_testimonials -%}
    <section class="minimal-testimonials">
      <div class="container">
        {%- if section.settings.testimonials_title != blank -%}
          <div class="section-header section-header--center">
            <h2 class="section-title">{{ section.settings.testimonials_title }}</h2>
          </div>
        {%- endif -%}
        <div class="minimal-testimonials__grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'testimonial' -%}
              <article class="minimal-testimonial" {{ block.shopify_attributes }}>
                <blockquote class="minimal-testimonial__quote">
                  "{{ block.settings.quote }}"
                </blockquote>
                <div class="minimal-testimonial__author">
                  <span class="minimal-testimonial__name">{{ block.settings.name }}</span>
                  {%- if block.settings.title != blank -%}
                    <span class="minimal-testimonial__title">{{ block.settings.title }}</span>
                  {%- endif -%}
                </div>
              </article>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} Newsletter {%- endcomment -%}
  {%- if section.settings.show_newsletter -%}
    <section class="minimal-newsletter">
      <div class="container">
        <div class="minimal-newsletter__inner">
          <h2 class="minimal-newsletter__title">{{ section.settings.newsletter_title }}</h2>
          {%- if section.settings.newsletter_text != blank -%}
            <p class="minimal-newsletter__text">{{ section.settings.newsletter_text }}</p>
          {%- endif -%}
          {%- form 'customer', class: 'minimal-newsletter__form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input
              type="email"
              name="contact[email]"
              class="minimal-newsletter__input"
              placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter email' }}"
              required
              aria-label="Email address"
            >
            <button type="submit" class="btn btn--primary">
              {{ section.settings.newsletter_button | default: 'Subscribe' }}
            </button>
          {%- endform -%}
        </div>
      </div>
    </section>
  {%- endif -%}
</div>

