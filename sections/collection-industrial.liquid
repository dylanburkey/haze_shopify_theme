{%- comment -%}
  Collection Industrial Section
  Product grid with industrial styling featuring visible grid lines,
  grayscale-to-color hover effects, and monospace metadata.
  Based on The Machinist design system.
{%- endcomment -%}

{%- liquid
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_to_show
  assign columns = section.settings.columns
  assign style = section.settings.style
-%}

<section
  class="collection-industrial collection-industrial--{{ style }}"
  style="
    --grid-columns: {{ columns }};
    --grid-line-width: {{ section.settings.grid_line_width }}px;
    --grid-line-color: {{ section.settings.grid_line_color }};
    --card-padding: {{ section.settings.card_padding }}px;
    --image-height: {{ section.settings.image_height }}px;
  "
>
  {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
    <div class="collection-industrial__header container">
      {%- if section.settings.heading != blank -%}
        <h2 class="collection-industrial__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <p class="collection-industrial__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>
  {%- endif -%}

  <div class="collection-industrial__grid">
    {%- for product in collection.products limit: products_to_show -%}
      <article class="product-card-industrial">
        {%- if product.available == false -%}
          <span class="product-card-industrial__badge product-card-industrial__badge--sold-out">
            {{ 'products.product.sold_out' | t | upcase }}
          </span>
        {%- elsif product.compare_at_price > product.price -%}
          <span class="product-card-industrial__badge product-card-industrial__badge--sale">
            {{ 'products.product.on_sale' | t | upcase }}
          </span>
        {%- endif -%}

        <a href="{{ product.url }}" class="product-card-industrial__link">
          <div class="product-card-industrial__image-container">
            {%- if product.featured_media -%}
              {% render 'image',
                image: product.featured_media,
                sizes: '(min-width: 1200px) 400px, (min-width: 768px) 50vw, 100vw',
                class: 'product-card-industrial__image',
                loading: 'lazy'
              %}
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'product-card-industrial__placeholder' }}
            {%- endif -%}
          </div>

          <div class="product-card-industrial__content">
            <div class="product-card-industrial__meta">
              <span class="product-card-industrial__sku">
                {%- if product.variants.first.sku != blank -%}
                  SKU: {{ product.variants.first.sku }}
                {%- else -%}
                  SKU: {{ product.id | slice: 0, 5 }}-X
                {%- endif -%}
              </span>
              <span class="product-card-industrial__stock {% if product.available %}product-card-industrial__stock--in{% else %}product-card-industrial__stock--out{% endif %}">
                {%- if product.available -%}
                  [IN_STOCK]
                {%- else -%}
                  [SOLD_OUT]
                {%- endif -%}
              </span>
            </div>

            <h3 class="product-card-industrial__title">{{ product.title }}</h3>

            {%- if section.settings.show_description and product.description != blank -%}
              <p class="product-card-industrial__description">
                {{ product.description | strip_html | truncatewords: 15 }}
              </p>
            {%- endif -%}

            <div class="product-card-industrial__footer">
              <span class="product-card-industrial__price">
                {{ product.price | money }}
              </span>
              <span class="product-card-industrial__btn">ADD +</span>
            </div>
          </div>
        </a>
      </article>
    {%- else -%}
      {%- for i in (1..products_to_show) -%}
        <article class="product-card-industrial">
          <div class="product-card-industrial__image-container">
            {{ 'product-1' | placeholder_svg_tag: 'product-card-industrial__placeholder' }}
          </div>
          <div class="product-card-industrial__content">
            <div class="product-card-industrial__meta">
              <span class="product-card-industrial__sku">SKU: XXX-X</span>
              <span class="product-card-industrial__stock">[IN_STOCK]</span>
            </div>
            <h3 class="product-card-industrial__title">Product Title</h3>
            <p class="product-card-industrial__description">Product description goes here with some sample text.</p>
            <div class="product-card-industrial__footer">
              <span class="product-card-industrial__price">$0.00</span>
              <span class="product-card-industrial__btn">ADD +</span>
            </div>
          </div>
        </article>
      {%- endfor -%}
    {%- endfor -%}
  </div>

  {%- if section.settings.show_view_all and collection.all_products_count > products_to_show -%}
    <div class="collection-industrial__footer container">
      <a href="{{ collection.url }}" class="collection-industrial__view-all">
        {{ 'products.facets.view_all' | t | default: 'View all' }} ({{ collection.all_products_count }})
      </a>
    </div>
  {%- endif -%}
</section>

{% stylesheet %}
  .collection-industrial {
    background: var(--color-background);
  }

  .collection-industrial__header {
    padding: var(--space-8) 0;
    text-align: center;
  }

  .collection-industrial__heading {
    font-family: var(--font-heading);
    font-size: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 0.5rem;
  }

  .collection-industrial__subheading {
    color: var(--color-text-secondary);
    margin: 0;
  }

  .collection-industrial__grid {
    display: grid;
    grid-template-columns: repeat(var(--grid-columns), 1fr);
    gap: var(--grid-line-width);
    background-color: var(--grid-line-color);
    border-top: var(--grid-line-width) solid var(--grid-line-color);
    border-bottom: var(--grid-line-width) solid var(--grid-line-color);
  }

  @media (max-width: 47.9375rem) {
    .collection-industrial__grid {
      grid-template-columns: 1fr;
    }
  }

  @media (min-width: 48rem) and (max-width: 63.9375rem) {
    .collection-industrial__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Product Card */
  .product-card-industrial {
    background-color: var(--color-background);
    position: relative;
    display: flex;
    flex-direction: column;
    transition: background-color 0s;
  }

  .product-card-industrial:hover {
    background-color: var(--color-background-secondary);
  }

  .product-card-industrial__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .product-card-industrial__badge {
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 2;
    padding: 4px 8px;
    font-family: var(--font-heading);
    font-size: 0.875rem;
    pointer-events: none;
  }

  .product-card-industrial__badge--sale {
    background: var(--color-primary);
    color: var(--color-background);
  }

  .product-card-industrial__badge--sold-out {
    background: var(--color-text-secondary);
    color: var(--color-background);
  }

  .product-card-industrial__image-container {
    height: var(--image-height);
    background: var(--color-background-secondary);
    margin: calc(var(--card-padding) * -1);
    margin-bottom: var(--card-padding);
    position: relative;
    border-bottom: var(--grid-line-width) solid var(--grid-line-color);
    overflow: hidden;
  }

  .product-card-industrial__image,
  .product-card-industrial__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Machinist style: grayscale to color on hover */
  .collection-industrial--machinist .product-card-industrial__image {
    filter: grayscale(100%);
    transition: filter 0s;
  }

  .collection-industrial--machinist .product-card-industrial:hover .product-card-industrial__image {
    filter: grayscale(0%);
  }

  .product-card-industrial__content {
    padding: var(--card-padding);
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .product-card-industrial__meta {
    display: flex;
    justify-content: space-between;
    font-family: var(--font-mono, monospace);
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }

  .product-card-industrial__stock--in {
    color: var(--color-primary);
  }

  .product-card-industrial__title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1.1;
    margin: 0 0 0.5rem;
  }

  .product-card-industrial__description {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin: 0 0 1.5rem;
    flex-grow: 1;
    line-height: 1.5;
  }

  .product-card-industrial__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: var(--grid-line-width) solid var(--grid-line-color);
    padding-top: 1rem;
    margin-top: auto;
  }

  .product-card-industrial__price {
    font-family: var(--font-mono, monospace);
    font-size: 1.125rem;
    font-weight: 700;
  }

  .product-card-industrial__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.25rem;
    background: transparent;
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
    font-family: var(--font-mono, monospace);
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    transition: none;
  }

  .product-card-industrial:hover .product-card-industrial__btn {
    background: var(--color-primary);
    color: var(--color-background);
  }

  .collection-industrial__footer {
    padding: var(--space-8) 0;
    text-align: center;
  }

  .collection-industrial__view-all {
    font-family: var(--font-mono, monospace);
    font-weight: 700;
    text-transform: uppercase;
    border-bottom: 2px solid var(--color-primary);
    padding-bottom: 4px;
  }

  .collection-industrial__view-all:hover {
    color: var(--color-primary);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection industrial",
  "tag": "section",
  "class": "section-collection-industrial",
  "settings": [
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "style",
      "label": "Design style",
      "default": "welder",
      "options": [
        { "value": "welder", "label": "The Welder (standard)" },
        { "value": "machinist", "label": "The Machinist (grayscale hover)" }
      ]
    },
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show product description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": true
    },
    {
      "type": "header",
      "content": "Grid"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns (desktop)",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "grid_line_width",
      "label": "Grid line width",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "grid_line_color",
      "label": "Grid line color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Card"
    },
    {
      "type": "range",
      "id": "card_padding",
      "label": "Card padding",
      "min": 12,
      "max": 32,
      "step": 4,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image height",
      "min": 200,
      "max": 400,
      "step": 25,
      "default": 300,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Collection industrial"
    }
  ]
}
{% endschema %}
