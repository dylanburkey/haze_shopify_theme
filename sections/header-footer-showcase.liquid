{% comment %}
  Header & Footer Showcase Section
  
  Demonstrates the 4 header styles and 3 footer styles,
  showing the flexibility of the section groups system.
{% endcomment %}

{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  .hf-showcase {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .hf-showcase__header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .hf-showcase__title {
    font-size: 2.5rem;
    margin-bottom: 16px;
    color: var(--color-text);
  }
  
  .hf-showcase__subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary, #666);
    margin-bottom: 20px;
  }
  
  .hf-showcase__math {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: white;
    padding: 16px 32px;
    border-radius: 50px;
    border: 2px solid var(--color-primary, #d71920);
    font-size: 1.25rem;
    font-weight: 700;
  }
  
  .hf-showcase__math span {
    color: var(--color-primary, #d71920);
  }
  
  .hf-showcase__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 60px;
    margin-bottom: 60px;
  }
  
  @media (max-width: 968px) {
    .hf-showcase__grid {
      grid-template-columns: 1fr;
    }
  }
  
  .hf-showcase__section {
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    padding: 40px;
  }
  
  .hf-showcase__section-title {
    font-size: 2rem;
    margin-bottom: 30px;
    text-align: center;
    color: var(--color-text);
  }
  
  .hf-showcase__items {
    display: grid;
    gap: 20px;
  }
  
  .hf-item {
    border: 2px solid #e5e5e5;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .hf-item:hover {
    border-color: var(--color-primary, #d71920);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }
  
  .hf-item__preview {
    height: 120px;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    position: relative;
    overflow: hidden;
  }
  
  .hf-item__preview--header::before {
    content: '';
    position: absolute;
    top: 20px;
    left: 20px;
    right: 20px;
    height: 40px;
    background: rgba(255,255,255,0.1);
    border-radius: 4px;
  }
  
  .hf-item__preview--footer::after {
    content: '';
    position: absolute;
    bottom: 20px;
    left: 20px;
    right: 20px;
    height: 40px;
    background: rgba(255,255,255,0.1);
    border-radius: 4px;
  }
  
  .hf-item__content {
    padding: 20px;
  }
  
  .hf-item__title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--color-text);
  }
  
  .hf-item__description {
    font-size: 0.875rem;
    color: var(--color-text-secondary, #666);
    margin-bottom: 16px;
  }
  
  .hf-item__features {
    list-style: none;
    padding: 0;
    margin: 0 0 16px;
  }
  
  .hf-item__features li {
    font-size: 0.75rem;
    color: var(--color-text-secondary, #666);
    margin-bottom: 4px;
    padding-left: 16px;
    position: relative;
  }
  
  .hf-item__features li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--color-primary, #d71920);
  }
  
  .hf-item__link {
    display: inline-block;
    color: var(--color-primary, #d71920);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
  }
  
  .hf-item__link:hover {
    text-decoration: underline;
  }
  
  .hf-showcase__combinations {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
    border-radius: 12px;
    padding: 60px 40px;
    text-align: center;
  }
  
  .hf-showcase__combinations-title {
    font-size: 2rem;
    margin-bottom: 20px;
  }
  
  .hf-showcase__combinations-text {
    font-size: 1.125rem;
    opacity: 0.9;
    margin-bottom: 30px;
  }
  
  .hf-showcase__combinations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-top: 40px;
  }
  
  .combination-card {
    background: rgba(255,255,255,0.1);
    padding: 20px;
    border-radius: 8px;
    border: 1px solid rgba(255,255,255,0.2);
  }
  
  .combination-card__title {
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .combination-card__combo {
    font-size: 0.75rem;
    opacity: 0.8;
  }
{%- endstyle -%}

<div class="hf-showcase">
  <div class="hf-showcase__header">
    <h2 class="hf-showcase__title">{{ section.settings.title }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="hf-showcase__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
    <div class="hf-showcase__math">
      <span>4</span> Headers × <span>3</span> Footers = <span>12</span> Combinations
    </div>
  </div>
  
  <div class="hf-showcase__grid">
    <!-- Headers Section -->
    <div class="hf-showcase__section">
      <h3 class="hf-showcase__section-title">4 Header Styles</h3>
      <div class="hf-showcase__items">
        <div class="hf-item">
          <div class="hf-item__preview hf-item__preview--header"></div>
          <div class="hf-item__content">
            <h4 class="hf-item__title">Unified Header</h4>
            <p class="hf-item__description">Default flexible header with search options</p>
            <ul class="hf-item__features">
              <li>Search bar or icon modes</li>
              <li>Adjustable logo scaling</li>
              <li>Sticky header option</li>
            </ul>
            <a href="/pages/header-unified-demo" class="hf-item__link">View Demo →</a>
          </div>
        </div>
        
        <div class="hf-item">
          <div class="hf-item__preview hf-item__preview--header"></div>
          <div class="hf-item__content">
            <h4 class="hf-item__title">Mega Menu Header</h4>
            <p class="hf-item__description">Multi-column navigation with featured content</p>
            <ul class="hf-item__features">
              <li>Featured product cards</li>
              <li>Image-rich navigation</li>
              <li>Promotional tiles</li>
            </ul>
            <a href="/pages/header-mega-demo" class="hf-item__link">View Demo →</a>
          </div>
        </div>
        
        <div class="hf-item">
          <div class="hf-item__preview hf-item__preview--header"></div>
          <div class="hf-item__content">
            <h4 class="hf-item__title">Industrial Header</h4>
            <p class="hf-item__description">Heavy industrial aesthetic</p>
            <ul class="hf-item__features">
              <li>Bold typography</li>
              <li>High contrast design</li>
              <li>Equipment-focused</li>
            </ul>
            <a href="/pages/header-industrial-demo" class="hf-item__link">View Demo →</a>
          </div>
        </div>
        
        <div class="hf-item">
          <div class="hf-item__preview hf-item__preview--header"></div>
          <div class="hf-item__content">
            <h4 class="hf-item__title">Corporate Header</h4>
            <p class="hf-item__description">Enterprise B2B focused design</p>
            <ul class="hf-item__features">
              <li>Contact info display</li>
              <li>B2B messaging</li>
              <li>Professional layout</li>
            </ul>
            <a href="/pages/header-corporate-demo" class="hf-item__link">View Demo →</a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Footers Section -->
    <div class="hf-showcase__section">
      <h3 class="hf-showcase__section-title">3 Footer Styles</h3>
      <div class="hf-showcase__items">
        <div class="hf-item">
          <div class="hf-item__preview hf-item__preview--footer"></div>
          <div class="hf-item__content">
            <h4 class="hf-item__title">Standard Footer</h4>
            <p class="hf-item__description">Default footer with newsletter signup</p>
            <ul class="hf-item__features">
              <li>Newsletter integration</li>
              <li>Payment icons</li>
              <li>Social links</li>
            </ul>
            <a href="/pages/footer-standard-demo" class="hf-item__link">View Demo →</a>
          </div>
        </div>
        
        <div class="hf-item">
          <div class="hf-item__preview hf-item__preview--footer"></div>
          <div class="hf-item__content">
            <h4 class="hf-item__title">Industrial Footer</h4>
            <p class="hf-item__description">Industrial brand styling</p>
            <ul class="hf-item__features">
              <li>Certification badges</li>
              <li>Industry messaging</li>
              <li>Heavy-duty design</li>
            </ul>
            <a href="/pages/footer-industrial-demo" class="hf-item__link">View Demo →</a>
          </div>
        </div>
        
        <div class="hf-item">
          <div class="hf-item__preview hf-item__preview--footer"></div>
          <div class="hf-item__content">
            <h4 class="hf-item__title">Preset Footer</h4>
            <p class="hf-item__description">Preset-specific configuration</p>
            <ul class="hf-item__features">
              <li>Matches preset styling</li>
              <li>Flexible layouts</li>
              <li>Custom branding</li>
            </ul>
            <a href="/pages/footer-preset-demo" class="hf-item__link">View Demo →</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  {% if section.settings.show_combinations %}
    <div class="hf-showcase__combinations">
      <h3 class="hf-showcase__combinations-title">Mix & Match for Your Brand</h3>
      <p class="hf-showcase__combinations-text">
        Swap headers and footers instantly from the theme editor. No coding required.
      </p>
      
      <div class="hf-showcase__combinations-grid">
        <div class="combination-card">
          <div class="combination-card__title">Classic B2B</div>
          <div class="combination-card__combo">Corporate Header + Standard Footer</div>
        </div>
        <div class="combination-card">
          <div class="combination-card__title">Heavy Industry</div>
          <div class="combination-card__combo">Industrial Header + Industrial Footer</div>
        </div>
        <div class="combination-card">
          <div class="combination-card__title">Modern Tech</div>
          <div class="combination-card__combo">Unified Header + Preset Footer</div>
        </div>
        <div class="combination-card">
          <div class="combination-card__title">E-commerce Pro</div>
          <div class="combination-card__combo">Mega Menu + Standard Footer</div>
        </div>
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Header & Footer Showcase",
  "tag": "section",
  "class": "section-hf-showcase",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Mix & Match Headers and Footers"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "4 header styles × 3 footer styles = 12 combinations"
    },
    {
      "type": "checkbox",
      "id": "show_combinations",
      "label": "Show combination examples",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f8f9fa"
    }
  ],
  "presets": [
    {
      "name": "Header & Footer Showcase"
    }
  ]
}
{% endschema %}
