{%- liquid
  assign has_announcement = false
  for block in section.blocks
    if block.settings.text != blank
      assign has_announcement = true
      break
    endif
  endfor
-%}

{%- if has_announcement -%}
  <div
    class="announcement-bar"
    style="
      --announcement-bg: {{ section.settings.background_color }};
      --announcement-text: {{ section.settings.text_color }};
    "
  >
    <div class="announcement-bar__content container">
      {%- for block in section.blocks -%}
        {%- if block.settings.text != blank -%}
          <div class="announcement-bar__message" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="announcement-bar__link">
                {{ block.settings.text }}
              </a>
            {%- else -%}
              <p>{{ block.settings.text }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}

{% stylesheet %}
  .announcement-bar {
    background-color: var(--announcement-bg);
    color: var(--announcement-text);
    padding-block: var(--space-2);
    font-size: var(--font-size-sm);
    text-align: center;
  }

  .announcement-bar__content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-4);
  }

  .announcement-bar__message p {
    margin: 0;
  }

  .announcement-bar__link {
    color: inherit;
    text-decoration: none;
  }

  .announcement-bar__link:hover {
    text-decoration: underline;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.announcement_bar.name",
  "class": "section-announcement-bar",
  "max_blocks": 5,
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Welcome to our store"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "enabled_on": {
    "groups": ["header"]
  },
  "presets": [
    {
      "name": "t:sections.announcement_bar.name",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
