{% comment %}
  Featured Product Section
  Showcases a single product with detailed benefits and CTAs
  
  Features:
  - Split layout (image + content)
  - Benefits list with icons
  - Price display with comparison
  - Dual CTAs
  - Badge support
{% endcomment %}

{{ 'preset-featured-product.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign layout = section.settings.layout | default: 'image-left'
-%}

<section 
  id="featured-product-{{ section.id }}"
  class="featured-product featured-product--{{ layout }}"
  aria-labelledby="featured-product-title-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="featured-product"
>
  <div class="featured-product__container container">
    <div class="featured-product__inner">
      {%- comment -%} Image Column {%- endcomment -%}
      <div class="featured-product__media">
        <div class="featured-product__image-wrapper">
          {%- if section.settings.badge_text != blank -%}
            <span class="featured-product__badge">{{ section.settings.badge_text }}</span>
          {%- endif -%}
          
          {%- if section.settings.image != blank -%}
            {{ section.settings.image | image_url: width: 1000 | image_tag:
              loading: 'lazy',
              class: 'featured-product__image',
              widths: '500, 750, 1000',
              sizes: '(min-width: 1024px) 50vw, 100vw',
              alt: section.settings.title
            }}
          {%- else -%}
            <div class="featured-product__placeholder">
              {% render 'icon', icon: 'cog', size: 80 %}
            </div>
          {%- endif -%}
        </div>

        {%- comment -%} Floating Stats {%- endcomment -%}
        {%- assign has_stats = false -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'stat' -%}
            {%- assign has_stats = true -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}

        {%- if has_stats -%}
          <div class="featured-product__stats">
            {%- for block in section.blocks -%}
              {%- if block.type == 'stat' -%}
                <div class="featured-product__stat" {{ block.shopify_attributes }}>
                  <span class="featured-product__stat-value">{{ block.settings.value }}</span>
                  <span class="featured-product__stat-label">{{ block.settings.label }}</span>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Content Column {%- endcomment -%}
      <div class="featured-product__content">
        {%- if section.settings.subtitle != blank -%}
          <span class="featured-product__subtitle">{{ section.settings.subtitle }}</span>
        {%- endif -%}

        <h2 id="featured-product-title-{{ section.id }}" class="featured-product__title">
          {{ section.settings.title }}
        </h2>

        {%- if section.settings.description != blank -%}
          <div class="featured-product__description">
            {{ section.settings.description }}
          </div>
        {%- endif -%}

        {%- comment -%} Benefits List {%- endcomment -%}
        {%- assign has_benefits = false -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'benefit' -%}
            {%- assign has_benefits = true -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}

        {%- if has_benefits -%}
          <ul class="featured-product__benefits" role="list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'benefit' -%}
                <li class="featured-product__benefit" {{ block.shopify_attributes }}>
                  <span class="featured-product__benefit-icon">
                    {% render 'icon', icon: 'check-circle', size: 20 %}
                  </span>
                  <span class="featured-product__benefit-text">{{ block.settings.text }}</span>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}

        {%- comment -%} Price {%- endcomment -%}
        {%- if section.settings.price != blank -%}
          <div class="featured-product__pricing">
            {%- if section.settings.price_prefix != blank -%}
              <span class="featured-product__price-prefix">{{ section.settings.price_prefix }}</span>
            {%- endif -%}
            <span class="featured-product__price">{{ section.settings.price }}</span>
            {%- if section.settings.compare_price != blank -%}
              <span class="featured-product__compare-price">{{ section.settings.compare_price }}</span>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- comment -%} CTAs {%- endcomment -%}
        <div class="featured-product__cta">
          {%- if section.settings.primary_button_text != blank -%}
            <a 
              href="{{ section.settings.primary_button_link }}" 
              class="featured-product__btn featured-product__btn--primary"
            >
              {{ section.settings.primary_button_text }}
              {% render 'icon', icon: 'arrow-right', size: 18 %}
            </a>
          {%- endif -%}
          
          {%- if section.settings.secondary_button_text != blank -%}
            <a 
              href="{{ section.settings.secondary_button_link }}" 
              class="featured-product__btn featured-product__btn--secondary"
            >
              {% render 'icon', icon: 'phone', size: 18 %}
              {{ section.settings.secondary_button_text }}
            </a>
          {%- endif -%}
        </div>

        {%- comment -%} Trust Note {%- endcomment -%}
        {%- if section.settings.trust_note != blank -%}
          <p class="featured-product__trust">
            {% render 'icon', icon: 'shield-check', size: 16 %}
            {{ section.settings.trust_note }}
          </p>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

