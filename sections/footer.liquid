<footer class="footer">
  <div class="footer__wrapper container">
    {%- if section.blocks.size > 0 -%}
      <div class="footer__grid">
        {%- for block in section.blocks -%}
          <div class="footer__column" {{ block.shopify_attributes }}>
            {%- case block.type -%}
              {%- when 'menu' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer__menu" role="list">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}

              {%- when 'text' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="footer__text">{{ block.settings.text }}</div>
                {%- endif -%}

              {%- when 'newsletter' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <p class="footer__text">{{ block.settings.text }}</p>
                {%- endif -%}
                {% form 'customer', class: 'footer__newsletter' %}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <div class="footer__newsletter-field">
                    <input
                      type="email"
                      name="contact[email]"
                      class="form-input footer__newsletter-input"
                      placeholder="{{ 'newsletter.placeholder' | t }}"
                      required
                      autocomplete="email"
                    >
                    <button type="submit" class="button button--primary footer__newsletter-button">
                      {{ 'newsletter.submit' | t }}
                    </button>
                  </div>
                {% endform %}
            {%- endcase -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="footer__bottom">
      <div class="footer__social">
        {%- if settings.social_facebook != blank -%}
          <a href="{{ settings.social_facebook }}" class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
