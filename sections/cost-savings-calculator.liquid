{% comment %}
  Cost Savings Calculator Section
  
  Interactive calculator showing how much merchants save by using
  built-in theme features instead of expensive apps.
  
  Demonstrates ROI and payback period for the theme purchase.
  Includes visual comparison charts and app ecosystem cost analysis.
{% endcomment %}

{%- liquid
  assign theme_price = section.settings.theme_price | default: 320
  
  # App ecosystem cost comparison data
  assign comparison_themes = section.settings.comparison_themes | default: 'Popular Theme A:180:266|Popular Theme B:250:198|Popular Theme C:300:234' | split: '|'
  
  # Feature parity data for demonstrations
  assign feature_categories = 'loyalty:125:tier_system,rewards,progress_tracking|seo:35:structured_data,rich_snippets,meta_optimization|mega_menu:22:multi_column,featured_content,mobile_responsive|faq:17:searchable,categories,analytics|attachments:27:file_management,categories,access_control|pwa:40:installable,offline_support,push_notifications' | split: '|'
-%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  .cost-calculator {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .cost-calculator__header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .cost-calculator__title {
    font-size: 2.5rem;
    margin-bottom: 16px;
    color: var(--color-text);
  }
  
  .cost-calculator__subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary, #666);
  }
  
  .cost-calculator__tabs {
    display: flex;
    justify-content: center;
    margin-bottom: 40px;
    border-bottom: 1px solid #e5e5e5;
  }
  
  .cost-calculator__tab {
    padding: 16px 32px;
    background: none;
    border: none;
    font-size: 1rem;
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
  }
  
  .cost-calculator__tab.active {
    border-bottom-color: var(--color-primary, #d71920);
    color: var(--color-primary, #d71920);
  }
  
  .cost-calculator__content {
    display: none;
  }
  
  .cost-calculator__content.active {
    display: block;
  }
  
  .cost-calculator__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    margin-bottom: 60px;
  }
  
  @media (max-width: 768px) {
    .cost-calculator__grid {
      grid-template-columns: 1fr;
    }
    
    .cost-calculator__tabs {
      flex-direction: column;
    }
    
    .cost-calculator__tab {
      padding: 12px 16px;
    }
  }
  
  .cost-calculator__features {
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 40px;
  }
  
  .feature-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .feature-item:last-child {
    border-bottom: none;
  }
  
  .feature-item__info h3 {
    font-size: 1.125rem;
    margin-bottom: 4px;
  }
  
  .feature-item__info p {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
  }
  
  .feature-item__cost {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary, #d71920);
    white-space: nowrap;
    margin-left: 20px;
  }
  
  .feature-item__checkbox {
    margin-right: 16px;
  }
  
  .cost-calculator__results {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
    border-radius: 8px;
    padding: 40px;
    position: sticky;
    top: 100px;
  }
  
  .results__title {
    font-size: 1.5rem;
    margin-bottom: 30px;
    text-align: center;
  }
  
  .results__stat {
    margin-bottom: 30px;
    padding-bottom: 30px;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }
  
  .results__stat:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }
  
  .results__label {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.7;
    margin-bottom: 8px;
  }
  
  .results__value {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    color: var(--color-primary, #d71920);
  }
  
  .results__value--large {
    font-size: 4rem;
  }
  
  .results__description {
    font-size: 0.875rem;
    opacity: 0.8;
    margin-top: 8px;
  }
  
  .results__payback {
    background: rgba(255,255,255,0.1);
    padding: 20px;
    border-radius: 4px;
    text-align: center;
    margin-top: 30px;
  }
  
  .results__payback-value {
    font-size: 2rem;
    font-weight: 700;
    color: #4ade80;
  }
  
  .cost-calculator__disclaimer {
    text-align: center;
    font-size: 0.875rem;
    color: #666;
    margin-top: 40px;
  }
  
  /* Chart Styles */
  .cost-chart {
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 40px;
    margin-bottom: 40px;
  }
  
  .cost-chart__title {
    font-size: 1.5rem;
    margin-bottom: 30px;
    text-align: center;
  }
  
  .cost-chart__canvas {
    width: 100%;
    height: 400px;
    position: relative;
  }
  
  .cost-chart__bar {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    padding: 16px;
    background: #f8f9fa;
    border-radius: 4px;
  }
  
  .cost-chart__bar-label {
    width: 150px;
    font-weight: 600;
    font-size: 0.875rem;
  }
  
  .cost-chart__bar-visual {
    flex: 1;
    height: 30px;
    background: linear-gradient(90deg, var(--color-primary, #d71920) 0%, #ff4757 100%);
    border-radius: 4px;
    margin: 0 16px;
    position: relative;
  }
  
  .cost-chart__bar-value {
    font-weight: 700;
    font-size: 0.875rem;
    min-width: 80px;
    text-align: right;
  }
  
  /* Theme Comparison Styles */
  .theme-comparison {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
  }
  
  .theme-comparison__card {
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 30px;
    text-align: center;
    position: relative;
  }
  
  .theme-comparison__card--highlight {
    border-color: var(--color-primary, #d71920);
    box-shadow: 0 4px 20px rgba(215, 25, 32, 0.1);
  }
  
