{%- endstyle -%}

<div class="cost-calculator" id="cost-calculator">
  <div class="cost-calculator__header">
    <h2 class="cost-calculator__title">{{ section.settings.title }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="cost-calculator__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>
  
  <!-- Tab Navigation -->
  <div class="cost-calculator__tabs">
    <button class="cost-calculator__tab active" data-tab="calculator">Calculator</button>
    <button class="cost-calculator__tab" data-tab="comparison">Theme Comparison</button>
    <button class="cost-calculator__tab" data-tab="features">Feature Parity</button>
  </div>
  
  <!-- Calculator Tab -->
  <div class="cost-calculator__content active" id="calculator-content">
    <div class="cost-calculator__grid">
      <div class="cost-calculator__features">
        <h3 style="margin-bottom: 30px; font-size: 1.5rem;">Select Features You Need</h3>
        
        {% for block in section.blocks %}
          {% if block.type == 'feature' %}
            <div class="feature-item">
              <input 
                type="checkbox" 
                id="feature-{{ block.id }}" 
                class="feature-item__checkbox"
                data-monthly-cost="{{ block.settings.monthly_cost }}"
                checked
              >
              <label for="feature-{{ block.id }}" class="feature-item__info" style="flex: 1; cursor: pointer;">
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.description }}</p>
              </label>
              <div class="feature-item__cost">${{ block.settings.monthly_cost }}/mo</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      <div class="cost-calculator__results">
        <h3 class="results__title">Your Savings</h3>
        
        <div class="results__stat">
          <div class="results__label">Monthly App Costs</div>
          <div class="results__value" id="monthly-cost">$0</div>
          <div class="results__description">What you'd pay for apps</div>
        </div>
        
        <div class="results__stat">
          <div class="results__label">Annual Savings</div>
          <div class="results__value results__value--large" id="annual-savings">$0</div>
          <div class="results__description">First year savings after theme purchase</div>
        </div>
        
        <div class="results__stat">
          <div class="results__label">3-Year Savings</div>
          <div class="results__value" id="three-year-savings">$0</div>
          <div class="results__description">Total savings over 3 years</div>
        </div>
        
        <div class="results__payback">
          <div class="results__label">Theme Pays For Itself In</div>
          <div class="results__payback-value" id="payback-period">0 days</div>
        </div>
      </div>
    </div>
    
    <!-- Cost Comparison Chart -->
    <div class="cost-chart">
      <h3 class="cost-chart__title">Cost Over Time Comparison</h3>
      <div class="cost-chart__canvas" id="cost-chart-canvas">
        <!-- Chart will be generated by JavaScript -->
      </div>
    </div>
  </div>
  
  <!-- Theme Comparison Tab -->
  <div class="cost-calculator__content" id="comparison-content">
    <div class="theme-comparison">
      {% for block in section.blocks %}
        {% if block.type == 'theme_comparison' %}
          <div class="theme-comparison__card {% if block.settings.highlight %}theme-comparison__card--highlight{% endif %}">
            <h3 class="theme-comparison__name">{{ block.settings.name }}</h3>
            <div class="theme-comparison__price">${{ block.settings.theme_price }}</div>
            <div class="theme-comparison__price-label">One-time theme cost</div>
            <div class="theme-comparison__apps">${{ block.settings.monthly_apps }}/mo</div>
            <div class="theme-comparison__apps-label">Monthly app costs</div>
            <div class="theme-comparison__total">
              Year 1 Total: ${{ block.settings.theme_price | plus: block.settings.monthly_apps | times: 12 }}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  
  <!-- Feature Parity Tab -->
  <div class="cost-calculator__content" id="features-content">
    {% render 'cost-comparison-data' %}
    
    <div class="app-ecosystem-comparison">
      <h3 class="app-ecosystem-comparison__title">App Ecosystem Cost Analysis</h3>
      
      {% for category in app_categories %}
        {% assign category_parts = category | split: ':' %}
        {% if category_parts.size >= 4 %}
          {% assign category_name = category_parts[0] %}
          {% assign category_cost = category_parts[1] %}
          {% assign popular_apps = category_parts[2] | split: '|' %}
          {% assign features = category_parts[3] | split: '|' %}
          
          <div class="app-category">
            <div class="app-category__info">
              <h3>{{ category_name | capitalize | replace: '_', ' ' }}</h3>
              <div class="app-category__apps">
                <strong>Popular Apps:</strong> {{ popular_apps | join: ', ' }}
              </div>
              <ul class="app-category__features">
                {% for feature in features %}
                  <li>{{ feature }}</li>
                {% endfor %}
              </ul>
            </div>
            
            <div class="app-category__equivalent">
              <div class="app-category__equivalent-title">Built into Forge Industrial</div>
              <p class="app-category__equivalent-desc">
                {% case category_name %}
                  {% when 'loyalty' %}
                    Complete loyalty engine with tier system, progress tracking, and rewards
                  {% when 'seo' %}
                    Full JSON-LD structured data, rich snippets, and meta optimization
                  {% when 'mega_menu' %}
                    Native mega menu with multi-column support and featured content
                  {% when 'faq' %}
                    Built-in searchable FAQ system with categories and analytics
                  {% when 'attachments' %}
                    Native attachment system with categories and access control
                  {% when 'pwa' %}
                    Complete PWA implementation with offline support and notifications
                  {% else %}
                    Built-in equivalent functionality included in theme
                {% endcase %}
              </p>
            </div>
            
            <div>
              <div class="app-category__cost">${{ category_cost }}</div>
              <div class="app-category__cost-label">per month saved</div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <div class="feature-parity">
      <h3 class="feature-parity__title">Feature Parity Matrix</h3>
      <div class="feature-parity__grid">
        {% for category in feature_categories %}
          {% assign category_data = category | split: ':' %}
          {% assign category_name = category_data[0] %}
          {% assign category_cost = category_data[1] %}
          {% assign category_features = category_data[2] | split: ',' %}
          
          <div class="feature-parity__item">
            <div class="feature-parity__item-title">
              {{ category_name | capitalize | replace: '_', ' ' }}
              <span class="feature-parity__cost">${{ category_cost }}/mo saved</span>
            </div>
            <ul class="feature-parity__features">
              {% for feature in category_features %}
                <li>{{ feature | replace: '_', ' ' | capitalize }}</li>
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  
  <div class="cost-calculator__disclaimer">
    <p>* App costs based on average pricing from Shopify App Store. Theme price: ${{ theme_price }} one-time purchase.</p>
  </div>
</div>

<script>
(function() {
  const themePrice = {{ theme_price }};
  const checkboxes = document.querySelectorAll('.feature-item__checkbox');
  const monthlyCostEl = document.getElementById('monthly-cost');
  const annualSavingsEl = document.getElementById('annual-savings');
  const threeYearSavingsEl = document.getElementById('three-year-savings');
  const paybackPeriodEl = document.getElementById('payback-period');
  const chartCanvas = document.getElementById('cost-chart-canvas');
  
  // Tab functionality
  const tabs = document.querySelectorAll('.cost-calculator__tab');
  const contents = document.querySelectorAll('.cost-calculator__content');
  
  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const targetTab = tab.dataset.tab;
      
      // Update active tab
      tabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');
      
      // Update active content
      contents.forEach(content => {
        content.classList.remove('active');
        if (content.id === targetTab + '-content') {
          content.classList.add('active');
        }
      });
    });
  });
  
  function calculateSavings() {
    let monthlyTotal = 0;
    
    checkboxes.forEach(checkbox => {
      if (checkbox.checked) {
        monthlyTotal += parseFloat(checkbox.dataset.monthlyCost);
      }
    });
    
    const annualCost = monthlyTotal * 12;
    const annualSavings = annualCost - themePrice;
    const threeYearSavings = (annualCost * 3) - themePrice;
    const paybackDays = monthlyTotal > 0 ? Math.ceil((themePrice / monthlyTotal) * 30) : 0;
    
    monthlyCostEl.textContent = '$' + monthlyTotal.toFixed(0);
    annualSavingsEl.textContent = '$' + Math.max(0, annualSavings).toFixed(0);
    threeYearSavingsEl.textContent = '$' + Math.max(0, threeYearSavings).toFixed(0);
    paybackPeriodEl.textContent = paybackDays + ' days';
    
    // Update chart
    updateCostChart(monthlyTotal, annualCost, threeYearSavings);
  }
  
  function updateCostChart(monthlyTotal, annualCost, threeYearSavings) {
    if (!chartCanvas) return;
    
    const maxValue = Math.max(themePrice, annualCost, threeYearSavings + themePrice);
    
    chartCanvas.innerHTML = `
      <div class="cost-chart__bar">
        <div class="cost-chart__bar-label">Theme Cost</div>
        <div class="cost-chart__bar-visual" style="width: ${(themePrice / maxValue) * 100}%"></div>
        <div class="cost-chart__bar-value">$${themePrice}</div>
      </div>
      <div class="cost-chart__bar">
        <div class="cost-chart__bar-label">Year 1 Apps</div>
        <div class="cost-chart__bar-visual" style="width: ${(annualCost / maxValue) * 100}%; background: linear-gradient(90deg, #ff6b6b 0%, #ff8e8e 100%)"></div>
        <div class="cost-chart__bar-value">$${annualCost.toFixed(0)}</div>
      </div>
      <div class="cost-chart__bar">
        <div class="cost-chart__bar-label">Year 2 Apps</div>
        <div class="cost-chart__bar-visual" style="width: ${(annualCost / maxValue) * 100}%; background: linear-gradient(90deg, #ff6b6b 0%, #ff8e8e 100%)"></div>
        <div class="cost-chart__bar-value">$${annualCost.toFixed(0)}</div>
      </div>
      <div class="cost-chart__bar">
        <div class="cost-chart__bar-label">Year 3 Apps</div>
        <div class="cost-chart__bar-visual" style="width: ${(annualCost / maxValue) * 100}%; background: linear-gradient(90deg, #ff6b6b 0%, #ff8e8e 100%)"></div>
        <div class="cost-chart__bar-value">$${annualCost.toFixed(0)}</div>
      </div>
      <div class="cost-chart__bar">
        <div class="cost-chart__bar-label">3-Year Total</div>
        <div class="cost-chart__bar-visual" style="width: ${((annualCost * 3) / maxValue) * 100}%; background: linear-gradient(90deg, #ff4757 0%, #ff6b6b 100%)"></div>
        <div class="cost-chart__bar-value">$${(annualCost * 3).toFixed(0)}</div>
      </div>
      <div style="margin-top: 20px; padding-top: 20px; border-top: 2px solid var(--color-primary, #d71920); text-align: center;">
        <strong>Total Savings: $${Math.max(0, threeYearSavings).toFixed(0)} over 3 years</strong>
      </div>
    `;
  }
  
  checkboxes.forEach(checkbox => {
    checkbox.addEventListener('change', calculateSavings);
  });
  
  // Initial calculation
  calculateSavings();
})();
</script>

