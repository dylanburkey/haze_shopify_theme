    content: "Best Value";
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary, #d71920);
    color: white;
    padding: 4px 16px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
  }
  
  .theme-comparison__name {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 16px;
  }
  
  .theme-comparison__price {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary, #d71920);
    margin-bottom: 8px;
  }
  
  .theme-comparison__price-label {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 20px;
  }
  
  .theme-comparison__apps {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 8px;
  }
  
  .theme-comparison__apps-label {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 20px;
  }
  
  .theme-comparison__total {
    padding-top: 20px;
    border-top: 1px solid #e5e5e5;
    font-size: 1.125rem;
    font-weight: 700;
  }
  
  /* Feature Parity Styles */
  .feature-parity {
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 40px;
    margin-bottom: 40px;
  }
  
  .feature-parity__title {
    font-size: 1.5rem;
    margin-bottom: 30px;
    text-align: center;
  }
  
  .feature-parity__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }
  
  .feature-parity__item {
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 24px;
  }
  
  .feature-parity__item-title {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .feature-parity__cost {
    color: var(--color-primary, #d71920);
    font-size: 0.875rem;
  }
  
  .feature-parity__features {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .feature-parity__features li {
    padding: 8px 0;
    border-bottom: 1px solid #f0f0f0;
    display: flex;
    align-items: center;
  }
  
  .feature-parity__features li:last-child {
    border-bottom: none;
  }
  
  .feature-parity__features li::before {
    content: "âœ“";
