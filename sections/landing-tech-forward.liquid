{% comment %}
  Tech Forward Landing Page Section
  Dark/futuristic theme for tech and electronics brands
  Based on mockup: assets/landing-pages/tech-forward-landing.html
{% endcomment %}

{{ 'landing-tech-forward.css' | asset_url | stylesheet_tag }}

<div class="landing-tech-forward" data-section-id="{{ section.id }}">
  {%- comment -%} Hero Section {%- endcomment -%}
  <section class="tech-hero">
    <div class="tech-hero__bg">
      {%- if section.settings.hero_image != blank -%}
        {{ section.settings.hero_image | image_url: width: 1920 | image_tag: class: 'tech-hero__bg-image', loading: 'eager' }}
      {%- else -%}
        <div class="tech-hero__bg-gradient"></div>
      {%- endif -%}
    </div>
    <div class="container">
      <div class="tech-hero__content">
        {%- if section.settings.hero_badge != blank -%}
          <span class="tech-hero__badge">{{ section.settings.hero_badge }}</span>
        {%- endif -%}
        <h1 class="tech-hero__title">{{ section.settings.hero_title }}</h1>
        {%- if section.settings.hero_subtitle != blank -%}
          <p class="tech-hero__subtitle">{{ section.settings.hero_subtitle }}</p>
        {%- endif -%}
        <div class="tech-hero__actions">
          {%- if section.settings.hero_button_label != blank -%}
            <a href="{{ section.settings.hero_button_link }}" class="btn btn--primary btn--glow">
              {{ section.settings.hero_button_label }}
            </a>
          {%- endif -%}
          {%- if section.settings.hero_secondary_label != blank -%}
            <a href="{{ section.settings.hero_secondary_link }}" class="btn btn--ghost">
              {{ section.settings.hero_secondary_label }}
            </a>
          {%- endif -%}
        </div>
        {%- if section.settings.show_hero_stats -%}
          <div class="tech-hero__stats">
            {%- for block in section.blocks -%}
              {%- if block.type == 'hero_stat' -%}
                <div class="tech-hero__stat" {{ block.shopify_attributes }}>
                  <span class="tech-hero__stat-value">{{ block.settings.value }}</span>
                  <span class="tech-hero__stat-label">{{ block.settings.label }}</span>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </section>

  {%- comment -%} Features Grid {%- endcomment -%}
  {%- if section.settings.show_features -%}
    <section class="tech-features">
      <div class="container">
        <div class="section-header section-header--center">
          {%- if section.settings.features_eyebrow != blank -%}
            <span class="section-eyebrow">{{ section.settings.features_eyebrow }}</span>
          {%- endif -%}
          <h2 class="section-title">{{ section.settings.features_title }}</h2>
          {%- if section.settings.features_subtitle != blank -%}
            <p class="section-subtitle">{{ section.settings.features_subtitle }}</p>
          {%- endif -%}
        </div>
        <div class="tech-features__grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'feature' -%}
              <article class="tech-feature-card" {{ block.shopify_attributes }}>
                <div class="tech-feature-card__icon">
                  {%- if block.settings.icon == 'cpu' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="4" y="4" width="16" height="16" rx="2"/>
                      <rect x="9" y="9" width="6" height="6"/>
                      <path d="M9 1v3M15 1v3M9 20v3M15 20v3M20 9h3M20 14h3M1 9h3M1 14h3"/>
                    </svg>
                  {%- elsif block.settings.icon == 'shield' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                    </svg>
                  {%- elsif block.settings.icon == 'zap' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                    </svg>
                  {%- elsif block.settings.icon == 'cloud' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"/>
                    </svg>
                  {%- elsif block.settings.icon == 'globe' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <line x1="2" y1="12" x2="22" y2="12"/>
                      <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                    </svg>
                  {%- elsif block.settings.icon == 'code' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="16 18 22 12 16 6"/>
                      <polyline points="8 6 2 12 8 18"/>
                    </svg>
                  {%- else -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                    </svg>
                  {%- endif -%}
                </div>
                <h3 class="tech-feature-card__title">{{ block.settings.title }}</h3>
                <p class="tech-feature-card__text">{{ block.settings.text }}</p>
              </article>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} Product Showcase {%- endcomment -%}
  {%- if section.settings.show_showcase -%}
    <section class="tech-showcase">
      <div class="container">
        <div class="tech-showcase__inner">
          <div class="tech-showcase__content">
            {%- if section.settings.showcase_eyebrow != blank -%}
              <span class="section-eyebrow">{{ section.settings.showcase_eyebrow }}</span>
            {%- endif -%}
            <h2 class="tech-showcase__title">{{ section.settings.showcase_title }}</h2>
            <p class="tech-showcase__text">{{ section.settings.showcase_text }}</p>
            <ul class="tech-showcase__list">
              {%- for block in section.blocks -%}
                {%- if block.type == 'showcase_item' -%}
                  <li class="tech-showcase__item" {{ block.shopify_attributes }}>
                    <svg class="tech-showcase__check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    {{ block.settings.text }}
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
            {%- if section.settings.showcase_button_label != blank -%}
              <a href="{{ section.settings.showcase_button_link }}" class="btn btn--primary">
                {{ section.settings.showcase_button_label }}
              </a>
            {%- endif -%}
          </div>
          <div class="tech-showcase__media">
            {%- if section.settings.showcase_image != blank -%}
              {{ section.settings.showcase_image | image_url: width: 800 | image_tag: class: 'tech-showcase__image', loading: 'lazy' }}
            {%- else -%}
              <div class="tech-showcase__placeholder">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <polyline points="21 15 16 10 5 21"/>
                </svg>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} Pricing Section {%- endcomment -%}
  {%- if section.settings.show_pricing -%}
    <section class="tech-pricing">
      <div class="container">
        <div class="section-header section-header--center">
          {%- if section.settings.pricing_eyebrow != blank -%}
            <span class="section-eyebrow">{{ section.settings.pricing_eyebrow }}</span>
          {%- endif -%}
          <h2 class="section-title">{{ section.settings.pricing_title }}</h2>
          {%- if section.settings.pricing_subtitle != blank -%}
            <p class="section-subtitle">{{ section.settings.pricing_subtitle }}</p>
          {%- endif -%}
        </div>
        <div class="tech-pricing__grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'pricing_tier' -%}
              <article class="tech-pricing-card{% if block.settings.featured %} tech-pricing-card--featured{% endif %}" {{ block.shopify_attributes }}>
                {%- if block.settings.featured -%}
                  <div class="tech-pricing-card__badge">Most Popular</div>
                {%- endif -%}
                <h3 class="tech-pricing-card__name">{{ block.settings.name }}</h3>
                <div class="tech-pricing-card__price">
                  <span class="tech-pricing-card__currency">$</span>
                  <span class="tech-pricing-card__amount">{{ block.settings.price }}</span>
                  <span class="tech-pricing-card__period">/month</span>
                </div>
                <p class="tech-pricing-card__description">{{ block.settings.description }}</p>
                <ul class="tech-pricing-card__features">
                  {%- assign features = block.settings.features | split: '|' -%}
                  {%- for feature in features -%}
                    <li>
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"/>
                      </svg>
                      {{ feature }}
                    </li>
                  {%- endfor -%}
                </ul>
                <a href="{{ block.settings.button_link }}" class="btn {% if block.settings.featured %}btn--primary{% else %}btn--outline{% endif %}">
                  {{ block.settings.button_label | default: 'Get Started' }}
                </a>
              </article>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} Testimonials {%- endcomment -%}
  {%- if section.settings.show_testimonials -%}
    <section class="tech-testimonials">
      <div class="container">
        <div class="section-header section-header--center">
          {%- if section.settings.testimonials_eyebrow != blank -%}
