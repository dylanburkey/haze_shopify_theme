          {%- endif -%}
          <h2 class="section-title">{{ section.settings.testimonials_title }}</h2>
        </div>
        <div class="tech-testimonials__grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'testimonial' -%}
              <article class="tech-testimonial-card" {{ block.shopify_attributes }}>
                <div class="tech-testimonial-card__stars">
                  {%- for i in (1..5) -%}
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                    </svg>
                  {%- endfor -%}
                </div>
                <blockquote class="tech-testimonial-card__quote">
                  "{{ block.settings.quote }}"
                </blockquote>
                <div class="tech-testimonial-card__author">
                  {%- if block.settings.avatar != blank -%}
                    {{ block.settings.avatar | image_url: width: 80 | image_tag: class: 'tech-testimonial-card__avatar', loading: 'lazy' }}
                  {%- else -%}
                    <div class="tech-testimonial-card__avatar-placeholder">
                      {{ block.settings.name | slice: 0 }}
                    </div>
                  {%- endif -%}
                  <div>
                    <div class="tech-testimonial-card__name">{{ block.settings.name }}</div>
                    <div class="tech-testimonial-card__role">{{ block.settings.role }}</div>
                  </div>
                </div>
              </article>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} CTA Section {%- endcomment -%}
  {%- if section.settings.show_cta -%}
    <section class="tech-cta">
      <div class="container">
        <div class="tech-cta__inner">
          <h2 class="tech-cta__title">{{ section.settings.cta_title }}</h2>
          {%- if section.settings.cta_text != blank -%}
            <p class="tech-cta__text">{{ section.settings.cta_text }}</p>
          {%- endif -%}
          <div class="tech-cta__actions">
            {%- if section.settings.cta_button_label != blank -%}
              <a href="{{ section.settings.cta_button_link }}" class="btn btn--primary btn--glow btn--large">
                {{ section.settings.cta_button_label }}
              </a>
            {%- endif -%}
            {%- if section.settings.cta_secondary_label != blank -%}
              <a href="{{ section.settings.cta_secondary_link }}" class="btn btn--ghost btn--large">
                {{ section.settings.cta_secondary_label }}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    </section>
  {%- endif -%}
</div>

