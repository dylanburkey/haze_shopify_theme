<section class="theme-tour-hero">
  <div class="container">
    <div class="theme-tour-hero__content">
      <span class="theme-tour-hero__badge">{{ section.settings.badge_text }}</span>
      <h1 class="theme-tour-hero__title">{{ section.settings.title }}</h1>
      <p class="theme-tour-hero__subtitle">{{ section.settings.subtitle }}</p>
    </div>
  </div>
</section>

<style>
  .theme-tour-hero {
    padding: 4rem 1.5rem;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: var(--color-button-text);
    text-align: center;
  }

  .theme-tour-hero__badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
  }

  .theme-tour-hero__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    margin: 0 0 1rem;
    line-height: 1.1;
  }

  .theme-tour-hero__subtitle {
    font-size: 1.125rem;
    opacity: 0.9;
    max-width: 40rem;
    margin: 0 auto;
    line-height: 1.6;
  }
</style>

{% schema %}
{
  "name": "Theme Tour Hero",
  "tag": "section",
  "class": "section-theme-tour-hero",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Theme Components"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Explore Your Theme"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "This theme includes multiple header and footer variants. Preview them below and learn how to swap them in the theme editor."
    }
  ],
  "presets": [
    {
      "name": "Theme Tour Hero"
    }
  ]
}
{% endschema %}

