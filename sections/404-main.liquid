{%- comment -%}
  404 Main - Forge Industrial Theme
{%- endcomment -%}

<section class="section-404">
  <div class="container">
    <div class="error-content">
      <h1>404</h1>
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>
      <a href="{{ routes.root_url }}" class="btn">{{ section.settings.button_label }}</a>
    </div>
  </div>
</section>

{% stylesheet %}
  .section-404 {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 60px 0;
  }

  .error-content h1 {
    font-size: 8rem;
    color: var(--color-primary);
    margin: 0;
    line-height: 1;
  }

  .error-content h2 {
    margin-bottom: 1rem;
  }

  .error-content p {
    margin-bottom: 2rem;
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .error-content h1 {
      font-size: 5rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Page Not Found"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "The page you're looking for doesn't exist or has been moved."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "BACK TO HOME"
    }
  ]
}
{% endschema %}
