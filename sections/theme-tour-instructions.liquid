  "name": "Theme Tour Instructions",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How to Swap Headers & Footers"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Follow these simple steps to change your store's header or footer in the Shopify theme editor."
    },
    {
      "type": "checkbox",
      "id": "show_tip",
      "label": "Show Pro Tip",
      "default": true
    },
    {
      "type": "text",
      "id": "tip_title",
      "label": "Tip Title",
      "default": "Pro Tip"
    },
    {
      "type": "textarea",
      "id": "tip_text",
