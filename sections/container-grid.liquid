{%- comment -%}
  Advanced container query-based grid section.
  Items automatically adapt their layout based on available container space.
  Supports multiple layout patterns including bento-style grids.

  @example
  {% section 'container-grid' %}
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --grid-columns: {{ section.settings.columns }};
    --grid-gap: {{ section.settings.gap }}px;
    --grid-padding-block: {{ section.settings.padding_top }}px {{ section.settings.padding_bottom }}px;
    --card-bg: {{ section.settings.card_background }};
    --card-border-color: {{ section.settings.card_border_color }};
    --card-border-radius: {{ section.settings.card_border_radius }}px;
    --card-padding: {{ section.settings.card_padding }}px;
    --card-hover-shadow: {{ section.settings.card_shadow }};
    --card-accent-color: {{ section.settings.accent_color }};
  }
{%- endstyle -%}

<section class="container-grid section" id="ContainerGrid-{{ section.id }}">
  <div class="container">
    {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
      <header class="container-grid__header{% if section.settings.center_header %} container-grid__header--centered{% endif %}">
        {%- if section.settings.subtitle != blank -%}
          <p class="container-grid__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="container-grid__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <div class="container-grid__description">{{ section.settings.description }}</div>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="container-grid__items container-grid__items--{{ section.settings.layout_pattern }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'card' -%}
            <div
              class="container-grid__item{% if block.settings.span_columns %} container-grid__item--span{% endif %}"
              {{ block.shopify_attributes }}
            >
              <article class="cq-card{% if block.settings.image_position == 'right' %} cq-card--image-right{% endif %}">
                {%- if block.settings.image != blank -%}
                  <div class="cq-card__media">
                    {%- if block.settings.link != blank -%}
                      <a href="{{ block.settings.link }}" class="cq-card__media-link">
                        {% render 'image', image: block.settings.image, class: 'cq-card__image' %}
                      </a>
                    {%- else -%}
                      {% render 'image', image: block.settings.image, class: 'cq-card__image' %}
                    {%- endif -%}

                    {%- if block.settings.badge != blank -%}
                      <span class="cq-card__badge">{{ block.settings.badge }}</span>
                    {%- endif -%}
                  </div>
                {%- endif -%}

                <div class="cq-card__content">
                  {%- if block.settings.icon != blank -%}
                    <div class="cq-card__icon">
                      {{ block.settings.icon }}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.heading != blank -%}
                    <h3 class="cq-card__heading">
                      {%- if block.settings.link != blank -%}
                        <a href="{{ block.settings.link }}">{{ block.settings.heading }}</a>
                      {%- else -%}
                        {{ block.settings.heading }}
                      {%- endif -%}
                    </h3>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <div class="cq-card__text">{{ block.settings.text }}</div>
                  {%- endif -%}

                  {%- if block.settings.link != blank and block.settings.link_text != blank -%}
                    <a href="{{ block.settings.link }}" class="cq-card__link">
                      {{ block.settings.link_text }}
                      {% render 'icon', name: 'arrow-right', size: 16 %}
                    </a>
                  {%- endif -%}
                </div>
              </article>
            </div>

          {%- when 'product' -%}
            {%- assign product = block.settings.product -%}
            {%- if product != blank -%}
              <div class="container-grid__item" {{ block.shopify_attributes }}>
                {% render 'product-card', product: product %}
              </div>
            {%- endif -%}

          {%- when 'collection' -%}
            {%- assign collection = block.settings.collection -%}
            {%- if collection != blank -%}
              <div class="container-grid__item" {{ block.shopify_attributes }}>
                <a href="{{ collection.url }}" class="cq-card cq-card--collection">
                  {%- if collection.image != blank -%}
                    <div class="cq-card__media">
                      {% render 'image', image: collection.image, class: 'cq-card__image' %}
                    </div>
                  {%- endif -%}
                  <div class="cq-card__content">
                    <h3 class="cq-card__heading">{{ collection.title }}</h3>
                    <p class="cq-card__meta">{{ 'collections.products_count' | t: count: collection.products_count }}</p>
                  </div>
                </a>
              </div>
            {%- endif -%}

          {%- when 'custom_html' -%}
            <div
              class="container-grid__item{% if block.settings.span_columns %} container-grid__item--span{% endif %}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.html }}
            </div>

        {%- endcase -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.button_text != blank -%}
      <div class="container-grid__footer">
        <a href="{{ section.settings.button_link }}" class="button button--{{ section.settings.button_style }}">
          {{ section.settings.button_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
  .container-grid {
    padding-block: var(--grid-padding-block);
  }

  .container-grid__header {
    margin-block-end: var(--space-8);
  }

  .container-grid__header--centered {
    text-align: center;
    max-width: 48rem;
    margin-inline: auto;
  }

  .container-grid__subtitle {
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--card-accent-color, var(--color-secondary));
    margin-block-end: var(--space-2);
  }

  .container-grid__title {
    font-size: var(--font-size-2xl);
    margin-block-end: var(--space-4);
  }

  .container-grid__description {
    color: var(--color-text-secondary);
    max-width: 65ch;
  }

  .container-grid__header--centered .container-grid__description {
    margin-inline: auto;
  }

  /* Grid Layout Patterns */
  .container-grid__items {
    display: grid;
    gap: var(--grid-gap, var(--grid-gap));
  }

  /* Standard grid */
  .container-grid__items--grid {
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 40rem) {
    .container-grid__items--grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 64rem) {
    .container-grid__items--grid {
      grid-template-columns: repeat(var(--grid-columns, 3), 1fr);
    }
  }

  /* Bento: Featured left */
  .container-grid__items--bento-left {
    grid-template-columns: 1fr;
  }

  @media (min-width: 64rem) {
    .container-grid__items--bento-left {
      grid-template-columns: 2fr 1fr;
      grid-template-rows: auto auto;
    }

    .container-grid__items--bento-left .container-grid__item:first-child {
      grid-row: span 2;
    }
  }

  /* Bento: Featured right */
  .container-grid__items--bento-right {
    grid-template-columns: 1fr;
  }

  @media (min-width: 64rem) {
    .container-grid__items--bento-right {
      grid-template-columns: 1fr 2fr;
      grid-template-rows: auto auto;
    }

    .container-grid__items--bento-right .container-grid__item:last-child {
      grid-row: span 2;
    }
  }

  /* Masonry-inspired (asymmetric) */
  .container-grid__items--asymmetric {
    grid-template-columns: repeat(2, 1fr);
  }

  @media (min-width: 64rem) {
    .container-grid__items--asymmetric {
      grid-template-columns: repeat(4, 1fr);
    }

    .container-grid__items--asymmetric .container-grid__item:nth-child(4n+1) {
      grid-column: span 2;
    }

    .container-grid__items--asymmetric .container-grid__item:nth-child(4n+4) {
      grid-column: span 2;
    }
  }

  /* Span modifier for items */
  .container-grid__item--span {
    grid-column: span 2;
  }

  /* Container Query Card */
  .container-grid__item {
    container-type: inline-size;
    container-name: card-container;
  }

  .cq-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: var(--card-bg, var(--color-background));
    border: 1px solid var(--card-border-color, var(--color-border));
    border-radius: var(--card-border-radius, var(--radius-md));
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition:
      box-shadow var(--duration-normal) var(--ease-default),
      border-color var(--duration-normal) var(--ease-default),
      transform var(--duration-normal) var(--ease-default);
  }

  .cq-card:hover {
    box-shadow: var(--card-hover-shadow, var(--shadow-lg));
    border-color: var(--card-accent-color, var(--color-secondary));
    transform: translateY(-2px);
  }

  .cq-card__media {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background-color: var(--color-background-secondary);
  }

  .cq-card__media-link {
    display: block;
    height: 100%;
  }

  .cq-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-normal) var(--ease-default);
  }

  .cq-card:hover .cq-card__image {
    transform: scale(1.05);
  }

  .cq-card__badge {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    padding: var(--space-1) var(--space-2);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    color: white;
    background-color: var(--card-accent-color, var(--color-secondary));
    border-radius: var(--radius-sm);
  }

  .cq-card__content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: var(--card-padding, var(--space-5));
  }

  .cq-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    margin-block-end: var(--space-4);
    font-size: 1.5rem;
    color: var(--card-accent-color, var(--color-secondary));
    background-color: color-mix(in srgb, var(--card-accent-color, var(--color-secondary)) 10%, transparent);
    border-radius: var(--radius-md);
  }

  .cq-card__heading {
    margin-block-end: var(--space-2);
    font-size: var(--font-size-lg);
    line-height: 1.3;
  }

  .cq-card__heading a {
    color: inherit;
    text-decoration: none;
  }

  .cq-card__heading a:hover {
    color: var(--card-accent-color, var(--color-secondary));
  }

  .cq-card__text {
    flex: 1;
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .cq-card__text p {
    margin: 0;
  }

  .cq-card__meta {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .cq-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    margin-block-start: var(--space-4);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--card-accent-color, var(--color-secondary));
    text-decoration: none;
    transition: gap var(--duration-fast) var(--ease-default);
  }

  .cq-card__link:hover {
    gap: var(--space-3);
  }

  /* Container Query: Horizontal card layout when container is wide */
  @container card-container (min-width: 500px) {
    .cq-card {
      flex-direction: row;
      align-items: stretch;
    }

    .cq-card--image-right {
      flex-direction: row-reverse;
    }

    .cq-card__media {
      width: 45%;
      flex-shrink: 0;
      aspect-ratio: auto;
      min-height: 280px;
    }

    .cq-card__content {
      width: 55%;
      padding: var(--space-8);
      justify-content: center;
    }

    .cq-card__heading {
      font-size: var(--font-size-xl);
    }

    .cq-card__text {
      font-size: var(--font-size-base);
    }
  }

  /* Container Query: Large featured card */
  @container card-container (min-width: 700px) {
    .cq-card__content {
      padding: var(--space-10);
    }

    .cq-card__heading {
      font-size: var(--font-size-2xl);
    }

    .cq-card__icon {
      width: 4rem;
      height: 4rem;
      font-size: 2rem;
    }
  }

  /* Footer */
  .container-grid__footer {
    display: flex;
    justify-content: center;
    margin-block-start: var(--space-10);
  }
{% endstylesheet %}

