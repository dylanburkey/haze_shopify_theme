<section
  class="hero"
  style="
    --hero-height: {{ section.settings.height }};
    --hero-content-width: {{ section.settings.content_width }}%;
    --hero-horizontal-position: {{ section.settings.horizontal_position }};
    --hero-vertical-position: {{ section.settings.vertical_position }};
    --hero-text-align: {{ section.settings.text_alignment }};
    --hero-text-color: {{ section.settings.text_color }};
    --hero-overlay-color: {{ section.settings.overlay_color }};
    --hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    {%- if section.settings.enable_gradient -%}
      --hero-gradient-start: {{ section.settings.gradient_color_start }};
      --hero-gradient-end: {{ section.settings.gradient_color_end }};
      --hero-gradient-direction: {{ section.settings.gradient_direction }}deg;
      --hero-gradient-opacity: {{ section.settings.gradient_opacity | divided_by: 100.0 }};
    {%- endif -%}
  "
>
  <div class="hero__media">
    {%- if section.settings.video != blank -%}
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'hero__video' }}
    {%- elsif section.settings.image != blank -%}
      {% render 'image',
        image: section.settings.image,
        sizes: '100vw',
        class: 'hero__image',
        loading: 'eager'
      %}
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'hero__placeholder' }}
    {%- endif -%}

    <div class="hero__overlay{% if section.settings.enable_gradient %} hero__overlay--gradient{% endif %}"></div>
  </div>

  <div class="hero__container container">
    <div class="hero__content">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            {%- if block.settings.heading != blank -%}
              <h1
                class="hero__heading"
                style="
                  --heading-size: {{ block.settings.heading_size }}px;
                  --heading-size-mobile: {{ block.settings.heading_size_mobile }}px;
                  --heading-weight: {{ block.settings.heading_weight }};
                  --heading-transform: {{ block.settings.heading_transform }};
                  --heading-letter-spacing: {{ block.settings.heading_letter_spacing }}em;
                "
                {{ block.shopify_attributes }}
              >
                {{- block.settings.heading -}}
              </h1>
            {%- endif -%}

          {%- when 'subheading' -%}
            {%- if block.settings.subheading != blank -%}
              <p
                class="hero__subheading"
                style="
                  --subheading-size: {{ block.settings.subheading_size }}px;
                  --subheading-size-mobile: {{ block.settings.subheading_size_mobile }}px;
                  --subheading-weight: {{ block.settings.subheading_weight }};
                  --subheading-max-width: {{ block.settings.subheading_max_width }}ch;
                "
                {{ block.shopify_attributes }}
              >
                {{- block.settings.subheading -}}
              </p>
            {%- endif -%}

          {%- when 'buttons' -%}
            <div class="hero__buttons" {{ block.shopify_attributes }}>
              {%- if block.settings.button_label_1 != blank -%}
                <a
                  href="{{ block.settings.button_link_1 }}"
                  class="button button--{{ block.settings.button_style_1 }} hero__button"
                >
                  {{- block.settings.button_label_1 -}}
                </a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                <a
                  href="{{ block.settings.button_link_2 }}"
                  class="button button--{{ block.settings.button_style_2 }} hero__button"
                >
                  {{- block.settings.button_label_2 -}}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero {
    position: relative;
    display: flex;
    min-height: var(--hero-height);
    color: var(--hero-text-color);
    overflow: hidden;
  }

  .hero__media {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero__image,
  .hero__video,
  .hero__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background-color: var(--hero-overlay-color);
    opacity: var(--hero-overlay-opacity);
  }

  .hero__overlay--gradient {
    background: linear-gradient(
      var(--hero-gradient-direction),
      var(--hero-gradient-start),
      var(--hero-gradient-end)
    );
    opacity: var(--hero-gradient-opacity);
  }

  .hero__container {
    position: relative;
    z-index: 1;
    display: flex;
    width: 100%;
    padding-block: var(--space-12);
    align-items: var(--hero-vertical-position);
    justify-content: var(--hero-horizontal-position);
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: var(--hero-content-width);
    text-align: var(--hero-text-align);
  }

  .hero__content[style*="--hero-text-align: center"] {
    align-items: center;
  }

  .hero__content[style*="--hero-text-align: right"] {
    align-items: flex-end;
  }

  .hero__heading {
    margin: 0 0 var(--space-4);
    font-size: var(--heading-size-mobile);
    font-weight: var(--heading-weight);
    text-transform: var(--heading-transform);
    letter-spacing: var(--heading-letter-spacing);
    line-height: 1.1;
    text-wrap: balance;
  }

  @media (min-width: 48rem) {
    .hero__heading {
      font-size: var(--heading-size);
    }
  }

  .hero__subheading {
    margin: 0 0 var(--space-6);
    max-width: var(--subheading-max-width);
    font-size: var(--subheading-size-mobile);
    font-weight: var(--subheading-weight);
    line-height: 1.5;
    opacity: 0.9;
  }

  @media (min-width: 48rem) {
    .hero__subheading {
      font-size: var(--subheading-size);
    }
  }

  .hero__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    margin-block-start: var(--space-2);
  }

  .hero__content[style*="--hero-text-align: center"] .hero__buttons {
    justify-content: center;
  }

  .hero__content[style*="--hero-text-align: right"] .hero__buttons {
    justify-content: flex-end;
  }

  .hero__button {
    min-width: 10rem;
  }

  .button--primary {
    background-color: var(--color-button-background);
    color: var(--color-button-text);
    border: 2px solid var(--color-button-background);
  }

  .button--primary:hover {
    opacity: 0.9;
  }

  .button--secondary {
    background-color: transparent;
    color: var(--hero-text-color);
    border: 2px solid var(--hero-text-color);
  }

  .button--secondary:hover {
    background-color: var(--hero-text-color);
    color: var(--hero-overlay-color, #000);
  }

  .button--outline-light {
    background-color: transparent;
    color: #fff;
    border: 2px solid #fff;
  }

  .button--outline-light:hover {
    background-color: #fff;
    color: #000;
  }
{% endstylesheet %}

