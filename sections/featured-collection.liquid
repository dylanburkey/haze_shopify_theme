{%- liquid
  assign collection = section.settings.collection
  assign products_to_show = section.settings.products_to_show
  assign columns = section.settings.columns
-%}

<section class="featured-collection section">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <div class="featured-collection__header">
        <h2 class="featured-collection__title">{{ section.settings.heading }}</h2>
        {%- if section.settings.show_view_all and collection != blank -%}
          <a href="{{ collection.url }}" class="featured-collection__link">
            {{ 'products.card.view_product' | t }}
            {% render 'icon', name: 'arrow-right', size: 16 %}
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div
      class="featured-collection__grid"
      style="--columns: {{ columns }};"
    >
      {%- if collection != blank -%}
        {%- for product in collection.products limit: products_to_show -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..products_to_show) -%}
          {% render 'product-card' %}
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .featured-collection__header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    margin-block-end: var(--space-8);
  }

  .featured-collection__title {
    margin: 0;
    font-size: var(--font-size-2xl);
  }

  .featured-collection__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-default);
  }

  .featured-collection__link:hover {
    color: var(--color-secondary);
  }

  .featured-collection__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--grid-gap);
  }

  @media (min-width: 48rem) {
    .featured-collection__grid {
      grid-template-columns: repeat(var(--columns), 1fr);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.featured_collection.name",
  "class": "section-featured-collection",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns on desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all link",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured_collection.name"
    }
  ]
}
{% endschema %}
