{%- comment -%}
  Footer - Forge Industrial Theme
  Matches mockup: Dark background, centered text, border-top
{%- endcomment -%}

<footer class="site-footer" data-section-id="{{ section.id }}">
  <div class="container">
    {%- if section.settings.show_newsletter -%}
      <div class="footer-newsletter">
        <h3>{{ section.settings.newsletter_heading | default: 'Stay Connected' }}</h3>
        <p>{{ section.settings.newsletter_text | default: 'Get updates on new products and industry news.' }}</p>
        
        {%- form 'customer', class: 'newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-input-wrapper">
            <input
              type="email"
              name="contact[email]"
              placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter your email' }}"
              required
              autocomplete="email"
              class="newsletter-input"
            >
            <button type="submit" class="btn newsletter-btn">
              {{ section.settings.newsletter_button | default: 'Subscribe' }}
            </button>
          </div>
        {%- endform -%}
      </div>
    {%- endif -%}

    <div class="footer-grid">
      {%- for block in section.blocks -%}
        <div class="footer-block" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'menu' -%}
              <h4 class="footer-heading">{{ block.settings.heading }}</h4>
              {%- if block.settings.menu != blank -%}
                <ul class="footer-menu">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}

            {%- when 'text' -%}
              {%- if block.settings.heading != blank -%}
                <h4 class="footer-heading">{{ block.settings.heading }}</h4>
              {%- endif -%}
              <div class="footer-text">{{ block.settings.text }}</div>

            {%- when 'social' -%}
              <h4 class="footer-heading">{{ block.settings.heading | default: 'Follow Us' }}</h4>
              <div class="footer-social">
                {%- if settings.social_twitter_link != blank -%}
                  <a href="{{ settings.social_twitter_link }}" target="_blank" rel="noopener" aria-label="Twitter">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                  </a>
                {%- endif -%}
                {%- if settings.social_facebook_link != blank -%}
                  <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                  </a>
                {%- endif -%}
                {%- if settings.social_instagram_link != blank -%}
                  <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                  </a>
                {%- endif -%}
                {%- if settings.social_youtube_link != blank -%}
                  <a href="{{ settings.social_youtube_link }}" target="_blank" rel="noopener" aria-label="YouTube">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>

    <div class="footer-bottom">
      <div class="footer-copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </div>

      {%- if section.settings.show_payment_icons -%}
        <div class="footer-payment">
          {%- for type in shop.enabled_payment_types -%}
            {{ type | payment_type_svg_tag: class: 'payment-icon' }}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--color-header-bg);
    color: rgba(255, 255, 255, 0.6);
    padding: 60px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: 60px;
  }

  /* Newsletter */
  .footer-newsletter {
    text-align: center;
    max-width: 500px;
    margin: 0 auto 50px;
    padding-bottom: 50px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-newsletter h3 {
    color: #fff;
    margin-bottom: 10px;
  }

  .footer-newsletter p {
    margin-bottom: 20px;
    font-size: 0.95rem;
  }

  .newsletter-input-wrapper {
    display: flex;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .newsletter-input {
    flex: 1;
    padding: 14px 16px;
    background: transparent;
    border: none;
    color: #fff;
    font-size: 1rem;
    outline: none;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter-btn {
    border-radius: 0;
    white-space: nowrap;
  }

  /* Footer Grid */
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    margin-bottom: 50px;
  }

  .footer-heading {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #fff;
    margin-bottom: 20px;
  }

  /* Footer Menu */
  .footer-menu {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-menu li {
    margin-bottom: 10px;
  }

  .footer-menu a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .footer-menu a:hover {
    color: var(--color-primary);
  }

  /* Footer Text */
  .footer-text {
    font-size: 0.9rem;
    line-height: 1.7;
  }

  /* Footer Social */
  .footer-social {
    display: flex;
    gap: 12px;
  }

  .footer-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.6);
    transition: all 0.2s;
  }

  .footer-social a:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-button-text);
  }

  /* Footer Bottom */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    padding-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer-copyright {
    font-size: 0.85rem;
  }

  .footer-payment {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .payment-icon {
    height: 24px;
    width: auto;
  }
</style>

{% schema %}
{
  "name": "t:sections.footer_standard.name",
  "class": "section-footer",
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Heading",
      "default": "Stay Connected"
    },
    {
      "type": "text",
      "id": "newsletter_text",
      "label": "Description",
      "default": "Get updates on new products and industry news."
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Email placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "newsletter_button",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "header",
      "content": "Bottom bar"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "t:sections.footer_standard.blocks.menu.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.footer_standard.blocks.text.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add your custom text here.</p>"
        }
      ]
    },
    {
      "type": "social",
      "name": "t:sections.footer_standard.blocks.social.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Follow Us"
        }
      ]
    }
  ],
  "enabled_on": {
    "groups": ["footer"]
  },
  "presets": [
    {
      "name": "t:sections.footer_standard.presets.default.name",
      "blocks": [
        {
          "type": "menu",
          "settings": {
            "heading": "Shop"
          }
        },
        {
          "type": "menu",
          "settings": {
            "heading": "Support"
          }
        },
        {
          "type": "social"
        }
      ]
    }
  ]
}
{% endschema %}
