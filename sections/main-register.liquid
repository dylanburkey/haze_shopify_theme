<section class="main-register section">
  <div class="container">
    <div class="register-page">
      <h1 class="register-page__title">{{ 'customer.register.title' | t }}</h1>

      {% form 'create_customer', class: 'register-form' %}
        {%- if form.errors -%}
          <div class="form-error">{{ form.errors | default_errors }}</div>
        {%- endif -%}

        <div class="form-field">
          <label for="FirstName" class="form-label">{{ 'customer.register.first_name' | t }}</label>
          <input type="text" id="FirstName" name="customer[first_name]" class="form-input" autocomplete="given-name">
        </div>

        <div class="form-field">
          <label for="LastName" class="form-label">{{ 'customer.register.last_name' | t }}</label>
          <input type="text" id="LastName" name="customer[last_name]" class="form-input" autocomplete="family-name">
        </div>

        <div class="form-field">
          <label for="Email" class="form-label">{{ 'customer.register.email' | t }}</label>
          <input type="email" id="Email" name="customer[email]" class="form-input" autocomplete="email" required>
        </div>

        <div class="form-field">
          <label for="Password" class="form-label">{{ 'customer.register.password' | t }}</label>
          <input type="password" id="Password" name="customer[password]" class="form-input" autocomplete="new-password" required>
        </div>

        <button type="submit" class="button button--primary register-form__submit">
          {{ 'customer.register.submit' | t }}
        </button>
      {% endform %}
    </div>
  </div>
</section>

{% stylesheet %}
  .register-page {
    max-width: 24rem;
    margin-inline: auto;
    padding-block: var(--space-8);
  }

  .register-page__title {
    margin-block-end: var(--space-8);
    text-align: center;
    font-size: var(--font-size-2xl);
  }

  .register-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .register-form__submit {
    width: 100%;
    margin-block-start: var(--space-4);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Register",
  "settings": []
}
{% endschema %}
