<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_primary }}">

    {%- comment -%} Resource Hints - Early connection establishment {%- endcomment -%}
    {% render 'resource-hints' %}

    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; {{ 'general.meta.tagged' | t: tags: current_tags | join: ', ' }}{% endif -%}
      {%- if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {%- if page_description -%}
      <meta name="description" content="{{ page_description | escape }}">
    {%- endif -%}

    {% render 'meta-tags' %}

    {%- comment -%} Critical CSS - Inlined for above-the-fold content {%- endcomment -%}
    {% render 'critical-css' %}

    {%- comment -%} CSS Variables - Theme customization {%- endcomment -%}
    {% render 'css-variables' %}

    {%- comment -%} Non-blocking CSS Loading {%- endcomment -%}
    {% render 'css-loader', css: 'base.css' %}

    {{ content_for_header }}

    <script>
      document.documentElement.classList.remove('no-js');
      document.documentElement.classList.add('js');
    </script>
  </head>

  <body class="template-{{ template.name }}{% if template.suffix %} template-{{ template.name }}-{{ template.suffix }}{% endif %}">
    <a class="skip-link" href="#main-content">
      {{ 'general.accessibility.skip_to_content' | t }}
    </a>

    {% sections 'header-group' %}

    <main id="main-content" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    <script src="{{ 'global.js' | asset_url }}" defer></script>
  </body>
</html>
