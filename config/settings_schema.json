  {
    "name": "SEO",
    "settings": [
      {
        "type": "header",
        "content": "Search Engine Optimization"
      },
      {
        "type": "paragraph",
        "content": "Optimize your store for search engines. These settings apply globally across your theme."
      },
      {
        "type": "checkbox",
        "id": "seo_enable_structured_data",
        "label": "Enable structured data (JSON-LD)",
        "default": true,
        "info": "Adds rich snippets for products, organization, and breadcrumbs"
      },
      {
        "type": "checkbox",
        "id": "seo_enable_breadcrumbs",
        "label": "Show breadcrumb navigation",
        "default": true,
        "info": "Displays breadcrumb links on product and collection pages"
      },
      {
        "type": "header",
        "content": "Social Sharing"
      },
      {
        "type": "image_picker",
        "id": "seo_default_share_image",
        "label": "Default social sharing image",
        "info": "Used when pages don't have a specific image. Recommended: 1200x630 pixels"
      },
      {
        "type": "text",
        "id": "seo_twitter_handle",
        "label": "Twitter/X handle",
        "info": "Include the @ symbol (e.g., @yourstore)"
      },
      {
        "type": "header",
        "content": "Performance"
      },
      {
        "type": "checkbox",
        "id": "seo_lazy_load_images",
        "label": "Lazy load images",
        "default": true,
        "info": "Defer loading of offscreen images to improve page speed"
      },
      {
        "type": "checkbox",
        "id": "seo_preconnect_cdn",
        "label": "Preconnect to CDN",
        "default": true,
        "info": "Establish early connections to Shopify CDN for faster resource loading"
      },
      {
        "type": "checkbox",
        "id": "seo_enable_speculation_rules",
        "label": "Enable speculation rules",
        "default": true,
        "info": "Prerender pages on hover for near-instant navigation (Chrome only)"
      },
      {
        "type": "header",
        "content": "Accessibility"
      },
      {
        "type": "checkbox",
        "id": "seo_skip_to_content",
        "label": "Show skip to content link",
        "default": true,
        "info": "Adds a skip navigation link for keyboard users"
      },
      {
        "type": "checkbox",
        "id": "seo_focus_indicators",
        "label": "Enhanced focus indicators",
        "default": true,
        "info": "Shows visible focus outlines for keyboard navigation"
      }
    ]
  },
