  {
    "name": "Progressive Web App",
    "settings": [
      {
        "type": "checkbox",
        "id": "pwa_enabled",
        "label": "Enable PWA features",
        "default": true
      },
      {
        "type": "text",
        "id": "pwa_name",
        "label": "App name",
        "info": "Defaults to shop name if empty"
      },
      {
        "type": "image_picker",
        "id": "pwa_icon",
        "label": "App icon",
        "info": "512x512 PNG recommended"
      },
      {
        "type": "color",
        "id": "pwa_theme_color",
        "label": "Theme color",
        "default": "#d71920"
      },
      {
        "type": "color",
        "id": "pwa_bg_color",
        "label": "Background color",
        "default": "#000000"
      },
      {
        "type": "checkbox",
        "id": "pwa_install_prompt",
        "label": "Show install prompt",
        "default": true,
        "info": "Display a banner prompting users to install the app"
      }
    ]
  },
  {
    "name": "Loyalty Program",
    "settings": [
      {
        "type": "checkbox",
        "id": "loyalty_enabled",
        "label": "Enable loyalty program",
        "default": true
      },
      {
        "type": "header",
        "content": "Tier 1 (Entry)"
      },
      {
        "type": "text",
        "id": "loyalty_tier1_name",
        "label": "Tier name",
        "default": "Apprentice"
      },
      {
        "type": "color",
        "id": "loyalty_tier1_color",
        "label": "Tier color",
        "default": "#999999"
      },
      {
        "type": "header",
        "content": "Tier 2"
      },
      {
        "type": "text",
        "id": "loyalty_tier2_name",
        "label": "Tier name",
        "default": "Fabricator"
      },
      {
        "type": "range",
        "id": "loyalty_tier2_threshold",
        "label": "Spend threshold",
        "min": 100,
        "max": 2000,
        "step": 50,
        "default": 500,
        "unit": "$"
      },
      {
        "type": "color",
        "id": "loyalty_tier2_color",
        "label": "Tier color",
        "default": "#ffb400"
      },
      {
        "type": "text",
        "id": "loyalty_tier2_code",
        "label": "Discount code",
        "default": "LOYALTY_FAB_5",
        "info": "Create this code manually in Shopify Admin > Discounts"
      },
      {
        "type": "text",
        "id": "loyalty_tier2_perk",
        "label": "Perk description",
        "default": "5% off every order"
      },
      {
        "type": "header",
        "content": "Tier 3 (Top)"
      },
      {
        "type": "text",
        "id": "loyalty_tier3_name",
        "label": "Tier name",
        "default": "Master Welder"
      },
      {
        "type": "range",
        "id": "loyalty_tier3_threshold",
        "label": "Spend threshold",
        "min": 500,
        "max": 5000,
        "step": 100,
        "default": 1500,
        "unit": "$"
      },
      {
        "type": "color",
        "id": "loyalty_tier3_color",
        "label": "Tier color",
        "default": "#d71920"
      },
      {
        "type": "text",
        "id": "loyalty_tier3_code",
        "label": "Discount code",
        "default": "LOYALTY_MASTER_10",
        "info": "Create this code manually in Shopify Admin > Discounts"
      },
      {
        "type": "text",
        "id": "loyalty_tier3_perk",
        "label": "Perk description",
        "default": "10% off every order"
      }
    ]
  },
  {
    "name": "AI Search (AutoRAG)",
    "settings": [
      {
        "type": "checkbox",
        "id": "autorag_enabled",
        "label": "Enable AI Search",
        "default": false
      },
      {
        "type": "text",
        "id": "autorag_worker_url",
        "label": "Cloudflare Worker URL",
        "info": "The endpoint for your RAG Vector DB. Leave empty for standard Shopify search."
      },
      {
        "type": "text",
        "id": "autorag_placeholder",
        "label": "Placeholder text",
        "default": "Describe what you need..."
      }
    ]
  },
  {
    "name": "Performance",
    "settings": [
      {
        "type": "header",
        "content": "Critical CSS"
      },
      {
        "type": "paragraph",
        "content": "Critical CSS is automatically inlined in the head for faster rendering of above-the-fold content."
      },
      {
        "type": "header",
        "content": "Resource Hints"
      },
      {
        "type": "paragraph",
        "content": "Preconnect and DNS prefetch hints are automatically added for Shopify CDN, checkout, and other critical origins."
      },
      {
        "type": "header",
        "content": "Speculation Rules"
      },
      {
        "type": "checkbox",
        "id": "enable_speculation_rules",
        "label": "Enable Speculation Rules",
        "default": false,
        "info": "Prerenders pages for instant navigation. Supported in Chromium browsers (Chrome, Edge). May increase bandwidth usage."
      },
      {
        "type": "header",
        "content": "Lazy Loading"
      },
      {
        "type": "checkbox",
        "id": "enable_native_lazy_loading",
        "label": "Enable native lazy loading",
        "default": true,
        "info": "Uses browser-native loading=\"lazy\" for images below the fold"
      }
    ]
  },
