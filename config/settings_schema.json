      },
      {
        "type": "text",
        "id": "seo_address_postal",
        "label": "Postal code"
      },
      {
        "type": "text",
        "id": "seo_address_country",
        "label": "Country"
      },
      {
        "type": "header",
        "content": "Schema Options"
      },
      {
        "type": "checkbox",
        "id": "seo_enable_organization_schema",
        "label": "Organization schema",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "seo_enable_website_schema",
        "label": "Website schema",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "seo_enable_product_schema",
        "label": "Product schema",
        "default": true
