  {
    "name": "Typography",
    "settings": [
      {
        "type": "select",
        "id": "font_heading",
        "label": "Heading font",
        "options": [
          { "value": "Oswald", "label": "Oswald" },
          { "value": "Teko", "label": "Teko" },
          { "value": "Archivo Black", "label": "Archivo Black" },
          {
            "value": "IBM Plex Sans Condensed",
            "label": "IBM Plex Sans Condensed"
          },
          { "value": "Barlow Condensed", "label": "Barlow Condensed" },
          { "value": "Bitter", "label": "Bitter" }
        ],
        "default": "Oswald"
      },
      {
        "type": "select",
        "id": "font_body",
        "label": "Body font",
        "options": [
          { "value": "Roboto", "label": "Roboto" },
          { "value": "Inter", "label": "Inter" },
          { "value": "Work Sans", "label": "Work Sans" },
          { "value": "IBM Plex Sans", "label": "IBM Plex Sans" },
          { "value": "Barlow", "label": "Barlow" },
          { "value": "Lato", "label": "Lato" }
        ],
        "default": "Roboto"
      }
    ]
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo width",
        "min": 50,
        "max": 250,
        "step": 10,
        "default": 120,
        "unit": "px"
      },
      {
        "type": "text",
        "id": "logo_text",
        "label": "Logo text (if no image)",
        "default": "FORGE"
      },
      {
        "type": "text",
        "id": "logo_suffix",
        "label": "Logo suffix (accent color)",
        "default": ".IND"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32 pixels recommended"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          { "value": "drawer", "label": "Drawer" },
          { "value": "page", "label": "Page" }
        ],
        "default": "drawer"
      }
    ]
  },
  {
    "name": "PWA (Progressive Web App)",
    "settings": [
      {
        "type": "header",
        "content": "Enable PWA"
      },
      {
        "type": "checkbox",
        "id": "enable_pwa",
        "label": "Enable Progressive Web App",
        "default": true,
        "info": "Allows customers to install your store as an app on their device"
      },
      {
        "type": "header",
        "content": "App Icons"
      },
      {
        "type": "image_picker",
        "id": "pwa_icon_192",
        "label": "App icon (192x192)",
        "info": "Required. Square PNG image, 192x192 pixels"
      },
      {
        "type": "image_picker",
        "id": "pwa_icon_512",
        "label": "App icon (512x512)",
        "info": "Required for splash screen. Square PNG image, 512x512 pixels"
      },
      {
        "type": "header",
        "content": "Install Prompt"
      },
      {
        "type": "checkbox",
        "id": "show_pwa_install_prompt",
        "label": "Show install prompt banner",
        "default": true,
        "info": "Shows a banner prompting users to install the app"
      },
      {
        "type": "text",
        "id": "pwa_install_title",
        "label": "Install prompt title",
        "default": "Install our app"
      },
      {
        "type": "text",
        "id": "pwa_install_description",
        "label": "Install prompt description",
        "default": "Add to home screen for quick access"
      },
      {
        "type": "text",
        "id": "pwa_install_button",
        "label": "Install button text",
        "default": "Install"
      },
      {
        "type": "header",
        "content": "Screenshots (Optional)"
      },
      {
        "type": "image_picker",
        "id": "pwa_screenshot_wide",
        "label": "Desktop screenshot",
        "info": "1920x1080 pixels recommended"
      },
      {
        "type": "image_picker",
        "id": "pwa_screenshot_narrow",
        "label": "Mobile screenshot",
        "info": "750x1334 pixels recommended"
      },
      {
        "type": "header",
        "content": "iOS Splash Screen"
      },
      {
        "type": "image_picker",
        "id": "pwa_splash_screen",
        "label": "iOS splash screen",
        "info": "Shown while app loads on iOS devices"
      }
    ]
  },
  {
    "name": "SEO & Performance",
    "settings": [
      {
        "type": "header",
        "content": "Search Engine Optimization"
      },
      {
        "type": "paragraph",
        "content": "Configure structured data and SEO settings to improve search engine visibility and performance."
      },
      {
        "type": "checkbox",
        "id": "seo_enable_organization_schema",
        "label": "Enable Organization schema",
        "default": true,
        "info": "Helps search engines understand your business"
      },
      {
        "type": "checkbox",
        "id": "seo_enable_website_schema",
        "label": "Enable Website schema",
        "default": true,
        "info": "Enables sitelinks search box in Google"
      },
      {
        "type": "checkbox",
        "id": "seo_enable_product_schema",
        "label": "Enable Product schema",
        "default": true,
        "info": "Shows rich snippets for products in search results"
      },
      {
        "type": "checkbox",
        "id": "seo_enable_breadcrumb_schema",
        "label": "Enable Breadcrumb schema",
        "default": true,
        "info": "Shows breadcrumb navigation in search results"
      },
      {
        "type": "header",
        "content": "Organization Information"
      },
      {
        "type": "text",
        "id": "seo_org_name",
        "label": "Organization name",
        "info": "Leave blank to use store name"
      },
      {
        "type": "image_picker",
        "id": "seo_org_logo",
        "label": "Organization logo",
        "info": "Recommended: 600x600 pixels"
      },
      {
        "type": "text",
        "id": "seo_org_phone",
        "label": "Phone number",
        "info": "Format: +1-555-123-4567"
      },
      {
        "type": "email",
        "id": "seo_org_email",
        "label": "Contact email"
      },
      {
        "type": "checkbox",
        "id": "seo_local_business",
        "label": "Local business",
        "default": false,
        "info": "Enable if you have a physical location"
      },
      {
        "type": "text",
        "id": "seo_address_street",
        "label": "Street address",
        "info": "Required for local business schema"
      },
      {
        "type": "text",
        "id": "seo_address_city",
        "label": "City"
      },
      {
        "type": "text",
        "id": "seo_address_region",
        "label": "State/Province"
      },
      {
        "type": "text",
        "id": "seo_address_postal",
        "label": "Postal code"
      },
      {
        "type": "text",
        "id": "seo_address_country",
        "label": "Country"
      },
      {
        "type": "header",
        "content": "Performance Optimization"
      },
      {
        "type": "checkbox",
        "id": "enable_lazy_loading",
        "label": "Enable lazy loading",
        "default": true,
        "info": "Improves page load speed by loading images as needed"
      },
      {
        "type": "checkbox",
        "id": "enable_resource_hints",
        "label": "Enable resource hints",
        "default": true,
        "info": "Preconnect to external domains and preload critical resources"
      },
      {
        "type": "checkbox",
        "id": "enable_async_css",
        "label": "Enable non-blocking CSS",
        "default": true,
        "info": "Load CSS asynchronously to prevent render blocking"
      },
      {
        "type": "checkbox",
        "id": "enable_image_optimization",
        "label": "Enable image optimization",
        "default": true,
        "info": "Automatically optimize images with responsive sizing and lazy loading"
      },
      {
        "type": "checkbox",
        "id": "enable_speculation_rules",
        "label": "Enable speculation rules",
        "default": true,
        "info": "Prerender pages for instant navigation (modern browsers)"
      },
      {
        "type": "checkbox",
        "id": "enable_resource_hints",
        "label": "Enable resource hints",
        "default": true,
        "info": "Preconnect to external resources for faster loading"
      },
      {
        "type": "checkbox",
        "id": "enable_speculation_rules",
        "label": "Enable speculation rules",
        "default": true,
        "info": "Prerender pages for instant navigation (Chrome only)"
      },
      {
        "type": "checkbox",
        "id": "enable_critical_css",
        "label": "Enable critical CSS",
        "default": true,
        "info": "Inline critical CSS for faster rendering"
      },
      {
        "type": "range",
        "id": "performance_budget_js",
        "min": 50,
        "max": 500,
        "step": 25,
        "unit": "kb",
        "label": "JavaScript budget",
        "default": 150,
        "info": "Maximum JavaScript size for optimal performance"
      },
      {
        "type": "range",
        "id": "performance_budget_css",
        "min": 25,
        "max": 200,
        "step": 25,
        "unit": "kb",
        "label": "CSS budget",
        "default": 75,
        "info": "Maximum CSS size for optimal performance"
      }
    ]
  },
  {
    "name": "Preset Showcase",
    "settings": [
      {
        "type": "header",
        "content": "Preset Showcase System"
      },
      {
        "type": "paragraph",
        "content": "Allow visitors to preview different theme presets without accessing the theme editor. Perfect for demonstrating theme versatility to potential customers."
      },
      {
        "type": "checkbox",
        "id": "preset_showcase_enabled",
        "label": "Enable preset showcase",
        "default": false,
        "info": "Shows a floating preset switcher widget"
      },
      {
        "type": "checkbox",
        "id": "preset_showcase_homepage",
        "label": "Show on homepage",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "preset_showcase_all_pages",
        "label": "Show on all pages",
        "default": false,
        "info": "When enabled, the switcher appears on every page"
      },
      {
        "type": "select",
        "id": "preset_showcase_position",
        "label": "Widget position",
        "options": [
          { "value": "bottom-right", "label": "Bottom right" },
          { "value": "bottom-left", "label": "Bottom left" },
          { "value": "top-right", "label": "Top right" },
          { "value": "top-left", "label": "Top left" }
        ],
        "default": "bottom-right"
      },
      {
        "type": "header",
        "content": "URL Parameters"
      },
      {
        "type": "paragraph",
        "content": "Visitors can also activate presets via URL: ?preset=bold-impact, ?preset=modern-minimal, ?preset=tech-forward, ?preset=warm-artisan, ?preset=zebra-skimmers"
      }
    ]
  },
  {
    "name": "Performance",
    "settings": [
      {
        "type": "header",
        "content": "JavaScript Loading"
      },
      {
        "type": "paragraph",
        "content": "Control how JavaScript files are loaded to optimize performance. Defer is recommended for best page load times."
      },
      {
        "type": "checkbox",
        "id": "enable_optimized_js",
        "label": "Enable optimized JavaScript loading",
        "default": true,
        "info": "Loads JavaScript files asynchronously to improve page load speed"
      },
      {
        "type": "select",
        "id": "js_loading_strategy",
        "label": "Loading strategy",
        "options": [
          { "value": "defer", "label": "Defer (Recommended)" },
          { "value": "async", "label": "Async" },
          { "value": "blocking", "label": "Blocking (slowest)" }
        ],
        "default": "defer",
        "info": "Defer: Scripts execute after page loads. Async: Scripts execute as soon as available. Blocking: Scripts block page rendering."
      },
      {
        "type": "select",
        "id": "js_load_location",
        "label": "JavaScript load location",
        "options": [
          { "value": "footer", "label": "Footer (Recommended)" },
          { "value": "head", "label": "Head" }
        ],
        "default": "footer",
        "info": "Footer: Loads after page content for better performance. Head: Traditional loading in document head."
      },
      {
        "type": "header",
        "content": "CSS Loading"
      },
      {
        "type": "select",
        "id": "css_load_location",
        "label": "CSS load location",
        "options": [
          { "value": "head", "label": "Head (Recommended)" },
          { "value": "footer", "label": "Footer" }
        ],
        "default": "head",
        "info": "Head: Standard CSS loading. Footer: Experimental, may cause flash of unstyled content."
      },
      {
        "type": "header",
        "content": "DNS Hints"
      },
      {
        "type": "checkbox",
        "id": "enable_dns_prefetch",
        "label": "Enable DNS prefetch for external domains",
        "default": true,
        "info": "Resolves DNS for external resources (fonts, CDNs) ahead of time"
      },
      {
        "type": "checkbox",
        "id": "enable_preconnect",
        "label": "Enable preconnect for critical domains",
        "default": true,
        "info": "Establishes early connections to important third-party origins (Google Fonts, etc.)"
      },
      {
        "type": "header",
        "content": "SEO & URLs"
      },
      {
        "type": "checkbox",
        "id": "enable_canonical_url",
        "label": "Enable canonical URL tags",
        "default": true,
        "info": "Helps search engines identify the preferred version of duplicate pages"
      },
      {
        "type": "header",
        "content": "Minification"
      },
      {
        "type": "paragraph",
        "content": "Note: Shopify automatically minifies assets in production. These settings control inline code minification."
      },
      {
        "type": "checkbox",
        "id": "minify_inline_css",
        "label": "Minify inline CSS",
        "default": false,
        "info": "Removes whitespace from inline CSS in sections. May make code harder to debug."
      },
      {
        "type": "checkbox",
        "id": "minify_inline_js",
        "label": "Minify inline JavaScript",
        "default": false,
        "info": "Removes whitespace from inline JavaScript. May make code harder to debug."
      }
    ]
  }
]
